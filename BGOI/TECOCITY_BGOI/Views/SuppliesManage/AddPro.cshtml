@{
    Layout = null;
}
@using TECOCITY_BGOI
@model tk_SProducts
<!DOCTYPE html>

<html>
<head>
    @*  <meta name="viewport" content="width=device-width" />*@
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Cache-Control" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <title>AddPro</title>
    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/Sales/RecordInfo.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")"  type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Validate/Validate-Injection.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/My97DatePicker/WdatePicker.js")" type="text/javascript" charset="UTF-8"></script>
    <script src="@Url.Content("~/Scripts/SupplyManage/AddPro.js")" type="text/javascript"></script>
</head>

@using (Html.BeginForm("AddPro", "SuppliesManage", FormMethod.Post, new { id = "ProInfo", action = "InsertProMsg", enctype = "multipart/form-data" }))
{
    <body>
        @Html.Hidden("msg", @ViewData["msg"])
        <div id="tabTitile">流水号:@Html.HiddenFor(model => model.Sid)@ViewBag.sid</div>
        <div id="hole" style="overflow-y: auto;">
            <table class="tabInfo" style="width: 97%; margin-left: 8px; margin-top: 10px;">
                <tr>
                    <td class="textLeft" style="width: 130px;">产品分类</td>
                    <td class="textright" style="text-align: left;">
                        @* @Html.DropDownListFor(model => model.Ptype, SupplyManage.GetProType(), new { @class = "txtCss" }) *@
                        @Html.TextBoxFor(model => model.Ptype, new { @class = "txtCss" })
                        <span style="color: red;">*</span> </td>
                </tr>
                <tr>
                    <td class="textLeft" style="width: 130px;">产品名称</td>
                    <td class="textright" style="text-align: left;">@* @Html.Hidden("HSelDesc")*@    @*@Html.HiddenFor(model => model.Productname)
                        <input type="text" id="SelDesc" class="txtCss" style="width: 150px;" onkeyup="getDescLink();" />
                        <div id="divSelDesc" class="selDiv" style="top: 100px; margin-left: 90px; width: 150px;" onmouseover="isOut=false;" onmouseout="isOut=true;">
                            <ul id="ulSelDesc" style="list-style: none; color: blue; padding-left: 0; width: 150px; text-align: left;">
                            </ul>
                        </div>*@
                        @Html.TextBoxFor(model => model.Productname, new { @class = "txtCss" })
                        <span style="color: red;">*</span></td>
                </tr>
                <tr>
                    <td class="textLeft" style="width: 130px;">规格型号</td>
                    <td class="textright" style="text-align: left;">@* @Html.Hidden("HStand")*@   @*   @Html.HiddenFor(model => model.Standard)
                        <input type="text" id="Stand" class="txtCss" style="width: 150px;" onkeyup="getStand();" />
                        <div id="divStand" class="selDiv" style="top: 130px; margin-left: 90px; width: 150px;" onmouseover="isOut=false;" onmouseout="isOut=true;">
                            <ul id="ulStand" style="list-style: none; color: blue; padding-left: 0; text-align: left; width: 150PX;">
                            </ul>
                        </div>*@
                        @Html.TextBoxFor(model => model.Standard, new { @class = "txtCss" })
                        <span style="color: red;">*</span></td>
                </tr>
                <tr>
                    <td class="textLeft" style="width: 130px;">产品编号</td>
                    <td class="textright" style="text-align: left;">
                    @* @Html.HiddenFor(model => model.Productid)*@
                    @* <td class="textRight">@Html.DropDownListFor(model => model.Productid, SupplyManage.GetProCode(), new { @class = "txtCss" }) @Html.ValidationMessageFor(model => model.Productid) <span style="color: red;">*</span></td>*@
                    @* <input type="text" id="Proid" class="txtCss" style="width: 150px;" onkeyup="getProid();" />
                        <div id="divProid" class="selDiv" style="top: 160px; margin-left: 90px; width: 150px;" onmouseover="isOut=false;" onmouseout="isOut=true;">
                            <ul id="ulProid" style="list-style: none; color: blue; padding-left: 0; text-align: left; width: 150PX;">
                            </ul>
                        </div>*@
                    @Html.TextBoxFor(model => model.Productid, new { @class = "txtCss" })
                    @Html.ValidationMessageFor(model => model.Productid)

                </tr>
                <tr>
                    <td class="textLeft" style="width: 130px;">单位</td>
                    <td class="textright" style="text-align: left;">
                        @* @Html.DropDownListFor(model => model.Measureunit, SupplyManage.GetUnite(), new { @class = "txtCss" }) *@
                        @Html.TextBoxFor(model => model.Measureunit, new { @class = "txtCss" })
                        @Html.ValidationMessageFor(model => model.Measureunit)
                        <span style="color: red;">*</span> </td>
                </tr>
                <tr>
                    <td class="textLeft" style="width: 130px;">详细说明</td>
                    <td class="textright" style="text-align: left;">@Html.TextBoxFor(model => model.Detaildesc, new { @class = "txtCss" })  @Html.ValidationMessageFor(model => model.Detaildesc)</td>
                </tr>
                <tr>
                    <td class="textLeft" style="width: 130px;">参考价格</td>
                    <td class="textright" style="text-align: left;">
                        @Html.TextBoxFor(model => model.Price, new { @class = "txtCss" }) @Html.ValidationMessageFor(model => model.Price)
                        <span style="color: red;">*</span>
                    </td>
                </tr>
                <tr>
                    <td class="textLeft" style="width: 130px;">产地</td>
                    <td class="textright" style="text-align: left;">@Html.TextBoxFor(model => model.Originplace, new { @class = "txtCss" }) </td>
                </tr>
                <tr>
                    <td class="textLeft" style="width: 130px;">拟购时间</td>
                    <td class="textright" style="text-align: left;">@Html.TextBoxFor(model => model.BYTtime, new { onclick = "WdatePicker({dateFmt: 'yyyy-MM-dd' })", @class = "txtCss",@readonly=true }) </td>
                </tr>
                <tr>
                    <td class="textLeft">请上传产品文件</td>
                    <td class="textright" colspan="3" style="text-align: left;">
                        <input name="file" type="file" id="UploadFile" class="file" />
                        <div id="Progress" runat="server" style="float: right; width: 85%; color: Green; height: 24px; line-height: 24px;">
                        </div>
                    </td>
                </tr>
            </table>
            <div style="margin-top: 10px; margin-left: 200px;">
                <input type="button" value="确定" id="sure1" class="btn" style="cursor: pointer" />
            </div>
        </div>
    </body> 
}

</html>
