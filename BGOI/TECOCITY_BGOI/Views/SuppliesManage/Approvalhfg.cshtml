@{
    ViewBag.Title = "";
}
@{
    Layout = null;
}
@using TECOCITY_BGOI;
<!DOCTYPE html>

<html>
<head>
    @*<meta name="viewport" content="width=device-width" />*@
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Cache-Control" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/SupplyManage/Approval/Approvalhfg.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/My97DatePicker/WdatePicker.js")" type="text/javascript" charset=“UTF-8″></script>

</head>
@using (Html.BeginForm("Approvalhfg", "SuppliesManage", FormMethod.Post, new { id = "ProjectformInfo" }))
{
    <body>
        @Html.Hidden("webkey", @ViewData["webkey"])   @Html.Hidden("folderBack", @ViewData["folderBack"])  @Html.Hidden("PID", @ViewData["PID"]) @Html.Hidden("RelevanceID", @ViewData["RelevanceID"])
        <div id="hole" style="overflow-y: auto;">
            <div id="tabTitile"><span style="margin-left: 10px;">审批编号：@ViewData["PID"]</span></div>
            <table class="tabInfo" style="width: 97%; margin-left: 8px; margin-top: 10px;">
                <tr>
                    <td class="textLeft">是否同意恢复供应商</td>
                    <td class="textright" colspan="5">
                        @Html.Hidden("SState", @ViewData["SState"])
                        @Html.RadioButton("SState", 0, new { disabled = "disabled" })是
                          @Html.RadioButton("SState", 1, new { disabled = "disabled" })否
                    </td>
                </tr>
                <tr>
                    <td class="textLeft">部门负责人意见</td>
                    <td class="textright" colspan="5">@Html.Hidden("SContent") @ViewData["SContent"]</td>
                </tr>

                <tr>
                    <td class="textLeft">是否通过公司级审批</td>
                    <td class="textRight" colspan="6">@Html.RadioButton("IsReturn", "是") 是 
                        @Html.RadioButton("IsReturn", "否") 否 <span style="color: red;">*</span></td>
                    @Html.Hidden("IsPass")
                </tr>
                <tr>
                    <td class="textLeft">公司级意见</td>
                    <td class="textRight" colspan="6">@Html.TextArea("Opinion", new { style = "width:90%;height:100px;" }) <span style="color: red;">*</span></td>
                </tr>
            </table>
            <div style="margin-top: 10px; margin-left: 80%">
                <input class="btn" type="button" id="charge" value="确定" />
            </div>
        </div>
    </body>
}
</html>
