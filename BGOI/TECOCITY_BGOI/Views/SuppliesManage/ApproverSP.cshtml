@{
    Layout = null;
}
@using TECOCITY_BGOI

@model Tk_SupplierBas
<!DOCTYPE html>

<html>
<head>
    @* <meta name="viewport" content="width=device-width" />*@
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <title>ApproverSP</title>
    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/My97DatePicker/WdatePicker.js")" type="text/javascript" charset=“UTF-8″></script>
    <script src="@Url.Content("~/Scripts/SupplyManage/AppSP.js")" type="text/javascript"></script>
</head>
@using (Html.BeginForm("ApproverSP", "SuppliesManage", FormMethod.Post, new { id = "AppInfo" }))
{
    <body>
        <div id="hole">
            <div id="tabTitile"><span style="margin-left: 10px;">流水号：@Html.HiddenFor(model => model.Sid)@ViewBag.sid</span></div>
            <table class="tabInfo" style="width: 97%; margin-left: 8px; margin-top: 10px;">
                <tr>
                    <td class="textLeft" style="width: 200px;">申请部门</td>
                    <td class="textRight">@Html.Hidden("DeclareUnitID")  @ViewBag.DeclareUnitID   </td>
                    <td class="textLeft">申请日期</td>
                    <td class="textRight">@Html.Hidden("ReviewDate", "", new { onclick = "WdatePicker({dateFmt: 'yyyy-MM-dd' })", @class = "txtCss", @ReadOnly = "ReadOnly" }) @DateTime.Now</td>
                </tr>
                <tr>
                    <td class="textLeft" style="width: 200px;">被处理供应商名称</td>
                    <td class="textRight" colspan="3">
                        @Html.HiddenFor(model => model.COMNameC, new { @class = "txtCss", @ReadOnly = "ReadOnly" }) @Model.COMNameC
                    </td>
                </tr>
                <tr>
                    <td class="textLeft" style="width: 200px;">处理意见：</td>
                    <td class="textright" colspan="4">
                        @Html.RadioButton("Opinions", "0")
                        停止供货
                         @Html.RadioButton("Opinions", "1")
                        暂停供货
                       @Html.RadioButton("Opinions", "2")
                        淘汰该供应商
                         <span style="color: red;">*</span>
                    </td>
                </tr>
                @* <tr>
                    <td class="textLeft" style="width: 200px;">处理原因：</td>
                    <td class="textRight" colspan="3">@Html.TextArea("OpinionsD", new { @class = "txtCss", maxlength = "200", style = "height:100px;width:750px;" })<span style="color: red;">*</span></td>
                </tr>
                <tr>
                    <td class="textLeft" style="width: 200px;">部门负责人：</td>
                    <td class="textRight">@Html.TextBox("Approval1User", "", new { @class = "txtCss" }) <span style="color: red;">*</span></td>
                    <td class="textLeft">处理日期：</td>
                    <td class="textRight">@Html.TextBox("ApprovalTime1", "", new { onclick = "WdatePicker({dateFmt: 'yyyy-MM-dd' })", @class = "txtCss" })<span style="color: red;">*</span></td>
                </tr>*@


                <tr>
                    <td class="textLeft" style="width: 200px;">申请准出原因：</td>
                    <td class="textRight">@Html.TextArea("Reason", new { @class = "txtCss", style = "height:50px;width:250px;" })<span style="color: red;">*</span></td>
                    <td class="textLeft">部门采购/供应商管理员签字</td>
                    <td class="textRight">@Html.TextBox("DeclareUser", "", new { @class = "txtCss" })<span style="color: red;">*</span></td>
                </tr>
            </table>
            <div style="margin-left: 80%; margin-top: 5%;">
                <input class="btn" type="button" id="charge" value="确定" />
            </div>
        </div>

    </body>
}
</html>
