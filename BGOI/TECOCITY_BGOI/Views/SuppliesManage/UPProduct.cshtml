@{
    Layout = null;
}
@using TECOCITY_BGOI
@model tk_SProducts
<!DOCTYPE html>

<html>
<head>
    @* <meta name="viewport" content="width=device-width" />*@
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Cache-Control" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <title>UPProduct</title>
    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/My97DatePicker/WdatePicker.js")" type="text/javascript" charset=“UTF-8″></script>
    <script src="@Url.Content("~/Scripts/SupplyManage/UpdateProduct.js")" type="text/javascript"></script>
</head>
@using (Html.BeginForm("UPProduct", "SuppliesManage", FormMethod.Post, new { id = "updatePro", action = "UpdateProInfo", enctype = "multipart/form-data" }))
{
    <body>
        @Html.HiddenFor(model => model.Createuser)
        @Html.HiddenFor(model => model.Createtime)
        @Html.HiddenFor(model => model.Validate)
        @Html.HiddenFor(model => model.ID)
        @Html.Hidden("msg", @ViewData["msg"])
        @Html.HiddenFor(model => model.FFileName)
        <div id="hole" style="overflow-y: auto;">
            <div id="tabTitile"><span style="margin-left: 10px;">流水号：@Model.Sid</span></div>@Html.HiddenFor(model => model.Sid)
            <table class="tabInfo" style="width: 97%; margin-left: 8px; margin-top: 10px;">
                <tr>
                    <td class="textLeft">产品分类</td>
                    <td class="textRight">
                        @Html.TextBoxFor(model => model.Ptype, new { @class = "txtCss" }) <span style="color: red;">*</span>
                        @*@Html.DropDownListFor(model => model.Ptype, SupplyManage.GetProType(), new { @class = "txtCss" })*@ </td>
                </tr>
                <tr>
                    <td class="textLeft">产品名称</td>
                    <td class="textRight">
                        @Html.TextBoxFor(model => model.Productname, new { @class = "txtCss" })
                        @* @Html.DropDownListFor(model => model.Productname, SupplyManage.GetProName(), new { @class = "txtCss" }) *@ <span style="color: red;">*</span>

                    </td>
                </tr>
                <tr>
                    <td class="textLeft">规格类型</td>
                    <td class="textRight">
                        @Html.TextBoxFor(model => model.Standard, new { @class = "txtCss" }) <span style="color: red;">*</span>
                        @*@Html.DropDownListFor(model => model.Standard, SupplyManage.GetStand(), new { @class = "txtCss" })*@

                    </td>
                </tr>
                <tr>
                    <td class="textLeft">产品编号</td>
                    <td class="textRight">
                        @Html.TextBoxFor(model => model.Productid, new { @class = "txtCss" })
                        @*@Html.DropDownListFor(model => model.Productid, SupplyManage.GetProCode(), new { @class = "txtCss" })*@ </td>
                </tr>
                <tr>
                    <td class="textLeft">单位</td>
                    <td class="textRight">
                        @Html.TextBoxFor(model => model.Measureunit, new { @class = "txtCss" }) <span style="color: red;">*</span>
                        @*@Html.DropDownListFor(model => model.Measureunit, SupplyManage.GetUnite(), new { @class = "txtCss" })*@ </td>
                </tr>
                <tr>
                    <td class="textLeft">详细说明</td>
                    <td class="textRight">@Html.TextBoxFor(model => model.Detaildesc, new { @class = "txtCss" }) </td>

                </tr>
                <tr>
                    <td class="textLeft">参考价格</td>
                    <td class="textRight">@Html.TextBoxFor(model => model.Price, new { @class = "txtCss" }) <span style="color: red;">*</span></td>
                </tr>
                <tr>
                    <td class="textLeft">产地</td>
                    <td class="textRight" colspan="3">@Html.TextBoxFor(model => model.Originplace, new { @class = "txtCss" }) </td>

                </tr>
                <tr>
                    <td class="textLeft" style="width: 130px;">拟购时间</td>
                    <td class="textRight">@Html.TextBoxFor(model => model.BYTtime, new { onclick = "WdatePicker({dateFmt: 'yyyy-MM-dd' })", @class = "txtCss" }) </td>
                </tr>
                <tr>
                    <td class="textLeft">已存在文件</td>
                    <td colspan="3">
                        <div id="unit"></div>
                    </td>
                </tr>
                <tr>
                    <td class="textLeft">上传产品文件</td>
                    <td class="textRight" colspan="5">
                        @Html.HiddenFor(model => model.FFileName, new { @class = "txtCss" })
                        <input name="file" type="file" id="UploadFile" class="file" />
                        <div id="Progress" runat="server" style="float: right; width: 85%; color: Green; height: 24px; line-height: 24px;">
                        </div>
                    </td>
                </tr>
            </table>
            <div>
                <table>
                    <tr>
                        <td>
                            <input type="button" value="更新" id="UPProduct" class="btn" style="cursor: pointer; margin-left: 300px; margin-top: 10px;" />
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </body>
}
</html>
