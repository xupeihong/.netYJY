@{
    Layout = null;
}
@using TECOCITY_BGOI;
@model tk_InspecMain

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditInspection</title>
    
    <link href="@Url.Content("~/CSS/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery_dialog.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")"  type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Validate/Validate-Injection.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/My97DatePicker/WdatePicker.js")" type="text/javascript" charset="utf-8"></script>
    <script src="@Url.Content("~/Scripts/FlowMeterManage/EditInspection.js")" type="text/javascript"></script>
    <style>
        .RowClass {
            background-color: #efd2d2;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("EditInspection", "FlowMeterManage", FormMethod.Post, new { id = "ProjectformInfo", onsubmit = "return returnConfirm();" }))
    { 
    <div id="pageContent" style="overflow-y:auto;">
        <div id="tabTitile"><span style="margin-left: 10px; float: left;">送检单编号：@Model.strSID</span></div>
        @Html.HiddenFor(model => model.strSID)
        @Html.Hidden("Hidden")
        <div style="width:98%;margin-left:10px;margin-top:5px;">
            <table class="tabInfo" id="content" >
                <tr style="height:30px;"> 
                    <td colspan="6" style="text-align:center; font-size:20px; font-weight:bold;">送检单</td>
                </tr>
                <tr style="height:30px;"> 
                    <td class="textRightL" style="text-align:left;" colspan="4"> 基本信息</td>
                </tr>
                <tr style="height:30px;">
                    <td class="textLeftL">联系人姓名</td>
                    <td class="textRightL">               
                        @Html.TextBoxFor(model => model.strLinkPerson, new { @class = "txtCss" })
                        <span style="color:red;"> * </span>@Html.ValidationMessageFor(model => model.strLinkPerson)
                    </td>
                    <td class="textLeftL">联系电话</td>
                    <td class="textRightL">
                        @Html.TextBoxFor(model => model.strLinkTel, new { @class = "txtCss" })
                        <span style="color:red;"> * </span>@Html.ValidationMessageFor(model => model.strLinkTel)
                    </td>
                </tr>
                <tr style="height:30px;">
                    <td class="textLeftL">送检日期</td>
                    <td class="textRightL">
                        @Html.TextBoxFor(model => model.strInspecDate, new { onclick = "WdatePicker({dateFmt: 'yyyy-MM-dd' })", @class = "txtCss" })
                        <span style="color:red;"> * </span>@Html.ValidationMessageFor(model => model.strInspecDate)
                    </td> 
                    <td class="textLeftL">送检批次</td>
                    <td class="textRightL">
                        @Html.TextBoxFor(model => model.strBathID, new { @class = "txtCss" })
                        <span style="color:red;"> * </span>@Html.ValidationMessageFor(model => model.strBathID)
                    </td>
                </tr>
                
                <tr style="height:30px;"> 
                    <td class="textRightL" style="text-align:left;" colspan="4"> 送检仪表详细信息</td>
                </tr>

                <tr>
                    <td colspan="4">
                        <br />
                        <input type="button" class="btn" value="添加" id="btnAdd" name="btnAdd" />
                        <input type="button" class="btn" value="删除" id="btnDel" name="btnDel" />
                        
                        <div style="overflow-y: scroll; margin-top:5px;">

                            <table id="myTable" cellpadding="0" cellspacing="0" class="tabInfo">
                                <tr style="text-align:center;">
                                    <td style="width: 10px;">
                                        序号
                                    </td>
                                    <td style="width: 100px;">
                                        登记号
                                    </td>
                                    <td style="width: 100px;">
                                        仪表编号
                                    </td>
                                    <td style="width: 120px;">
                                        准确度
                                    </td>
                                    <td style="width: 120px;">
                                        数量
                                    </td>
                                    <td style="width: 120px;">
                                        第三方检测单位
                                    </td>
                                </tr>
                                <tbody id="DetailInfo" class="tabInfo"></tbody>
                                               
                            </table><br /><br /><br />  
                        </div>
                    </td>
                </tr>

            </table>
        </div>
        
        <div style="float:right; margin-top:10px;">
           <input type="submit" id="QD" class="btn" value=" 确 定 " style="margin-right:10px;"/> 
            <br /><br />
        </div>
    </div>
    }
</body>
</html>
