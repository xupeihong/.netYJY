@{
    Layout = null;
}
@using TECOCITY_BGOI;
@model tk_FileUpload

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UpLoadManage</title>

    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery_dialog.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")"  type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Validate/Validate-Injection.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/FlowMeterManage/UpLoadManage.js")" type="text/javascript"></script>
</head>
<body>
    @using (Html.BeginForm("UpLoadManage", "FlowMeterManage", FormMethod.Post, new { id = "ProjectformInfo", action = "InsertBidding", enctype = "multipart/form-data" }))
    {        
        <div id="pageContent">
            <div id="tabTitile"><span style="margin-left: 10px; float: left;">登记编号：@ViewData["RID"]</span></div>
            @Html.Hidden("Hidden", @ViewData["RID"])
            <div style="width: 98%; margin-left: 10px; margin-top: 5px; text-align: left;">
                <table class="tabInfo" style="width: 97%; margin-left: 10px; margin-top: 10px;">
                    <tr>
                        <td class="textLeft">选择上传环节</td>
                        <td class="textRight">@Html.DropDownListFor(model => model.StrType, FlowMeterMan.getUpType(), new { @class = "txtCss" })
                            <span style="color: red;">* </span>@Html.ValidationMessageFor(model => model.StrType)</td>
                    </tr>
                    <tr>
                        <td class="textLeft">选择上传文件</td>
                        <td class="textRight">
                            <input name="file" type="file" id="UploadFile" class="file" style="width: 80%;" multiple="multiple" /></td>
                    </tr>
                    <tr>
                        <td class="textLeft">备注</td>
                        <td>@Html.TextAreaFor(model => model.StrComments, new { @class = "txtCss", style = "width:90%;height:100px;" })</td>
                    </tr>
                </table>
            </div>
            @Html.Hidden("msg", ViewData["msg"])
            <div style="margin-top: 10px; margin-left: 75%">
                <input class="btn" type="button" id="charge" value="确 定" />
            </div>
        </div>
    }
</body>
</html>
