@{
    Layout = null;
}
@using TECOCITY_BGOI;
@model tk_CleanRepair
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddCleanRepair</title>

    <link href="@Url.Content("~/CSS/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery_dialog.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Validate/Validate-Injection.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/My97DatePicker/WdatePicker.js")" type="text/javascript" charset="utf-8"></script>
    <script src="@Url.Content("~/Scripts/FlowMeterManage/AddCleanRepair.js")" type="text/javascript"></script>
</head>
<body>
    @using (Html.BeginForm("AddCleanRepair", "FlowMeterManage", FormMethod.Post, new { id = "ProjectformInfo", onsubmit = "return returnConfirm();" }))
    {


        <div id="pageContent" style="overflow-y:auto;">


            <div style="width:98%;margin-left:10px;margin-top:5px;">
                <table class="tabInfo" id="content">
                    <tr style="height:30px;">
                        <td colspan="6" style="text-align:center; font-size:20px; font-weight:bold;">清洗记录</td>
                    </tr>
                    <tr style="height:30px;">
                        <td class="textRightL" style="text-align:left;" colspan="4"> 基本信息</td>
                    </tr>
                    <tr style="height:30px;">

                        <td class="textLeftL">登记卡号</td>
                        <td class="textRightL">

                            @Html.TextBoxFor(model => model.StrRID, new { @class = "txtCss", @readonly = true })
                        </td>
                        <td class="textLeftL">清洗人员</td>
                        <td class="textRightL">
                            @Html.TextBoxFor(model => model.StrCleanUser, new { @class = "txtCss" })
                            <span style="color:red;"> * </span><br />@Html.ValidationMessageFor(model => model.StrCleanUser)
                        </td>

                    </tr>
                    <tr style="height:30px;">
                        <td class="textLeftL">清洗开始时间</td>
                        <td class="textRightL">
                            @Html.TextBoxFor(model => model.StrCleanSDate, new { onclick = "WdatePicker({dateFmt: 'yyyy/MM/dd HH:mm' })", @class = "txtCss" })
                            <span style="color:red;"> * </span><br />@Html.ValidationMessageFor(model => model.StrCleanSDate)

                        </td>
                        <td class="textLeftL">清洗结束时间</td>
                        <td class="textRightL">
                            @Html.TextBoxFor(model => model.StrCleanEDate, new { onclick = "WdatePicker({dateFmt: 'yyyy/MM/dd HH:mm' })", @class = "txtCss" })
                            <span style="color:red;"> * </span><br />@Html.ValidationMessageFor(model => model.StrCleanEDate)
                        </td>
                    </tr>

                    <tr style="height:30px;">
                        <td class="textLeftL">故障说明</td>
                        <td class="textRightL" colspan="3">
                            @Html.TextAreaFor(model => model.StrBreakdown, new { @class = "txtCss", style = "width:93%;" })

                            <span style="color:red;"> * </span><br />@Html.ValidationMessageFor(model => model.StrBreakdown)
                        </td>
                    </tr>
                    <tr style="height:30px;">
                        <td class="textLeftL">备注</td>
                        <td class="textRightL" colspan="3">
                            @Html.TextAreaFor(model => model.StrRemark, new { @class = "txtCss", style = "width:93%;" })
                            <span style="color:red;"> * </span><br />@Html.ValidationMessageFor(model => model.StrRemark)
                        </td>
                    </tr>


                </table>
           
            </div>
            <div style="float:right; margin-top:10px;">
                <input type="submit" id="QD" class="btn" value="确定" style="margin-right:10px;" />
                <br /><br />
            </div>
        </div>

    }
</body>
</html>
