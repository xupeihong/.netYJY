@{
    Layout = null;
}
@using TECOCITY_BGOI;
@model tk_TakeDelivery

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TakeDelivery</title>
    
    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery_dialog.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/My97DatePicker/WdatePicker.js")" type="text/javascript" charset="utf-8"></script>
    <script src="@Url.Content("~/Scripts/FlowMeterManage/TakeDelivery.js")" type="text/javascript"></script>
   <style>
       .ui-jqgrid tr.jqgrow td {
           white-space: normal !important;
           height: auto;
           vertical-align: text-top;
           padding-top: 2px;
       }
   </style>
</head>
<body>
    @using (Html.BeginForm("TakeDelivery", "FlowMeterManage", FormMethod.Post, new { id = "ProjectformInfo", onsubmit = "return returnConfirm();" }))
    { 
    <div id="pageContent">
        <div id="bor" style="width:100%;margin-top:5px;margin-left:10px;">
            <table id="list" class="scroll" style="width:100%;"></table>@Html.Hidden("CheckIDs")
            <div id="pager" class="scroll" style="text-align:center;width:100%;"></div>
        </div>
        <div style="width:97%;margin-left:10px;margin-top:5px;">
            <table class="tabInfo" id="content" >@Html.Hidden("Order")
                <tr style="height:30px;"> 
                    <td colspan="4" style="text-align:left;">  确认收货信息 </td>
                </tr>
                <tr style="height:30px;"> 
                    <td class="textLeftL">收货单号</td>
                    <td class="textRightL">@Html.TextBox( "TakeID", "", new { @class = "txtCss" })</td>
                    <td class="textLeftL">送货单位</td>
                    <td class="textRightL">@Html.TextBox("UnitName", "", new { @class = "txtCss" })</td>
                </tr>
                <tr style="height:30px;"> 
                    <td class="textLeftL">送货人姓名</td>
                    <td class="textRightL">@Html.TextBox("DeliverName", "", new { @class = "txtCss" })</td>
                    <td class="textLeftL">送货人电话</td>
                    <td class="textRightL">@Html.TextBox("DeliverTel", "", new { @class = "txtCss" })</td>
                </tr>
                <tr style="height:30px;"> 
                    <td class="textLeftL">送货日期</td>
                    <td class="textRightL">@Html.TextBox("DeliverDate", "", new { onclick = "WdatePicker({dateFmt: 'yyyy-MM-dd' })", @class = "txtCss" })</td>
                    <td class="textLeftL">收货人姓名</td>
                    <td class="textRightL">@Html.TextBox("ReceiveName", "", new { @class = "txtCss" })</td>
                </tr>
                <tr style="height:30px;"> 
                    <td class="textLeftL">收货人电话</td>
                    <td class="textRightL">@Html.TextBox("ReceiveTel", "", new { @class = "txtCss" })</td>
                    <td class="textLeftL">收货日期</td>
                    <td class="textRightL">@Html.TextBox("ReceiveDate", "", new { onclick = "WdatePicker({dateFmt: 'yyyy-MM-dd' })", @class = "txtCss" })</td>
                </tr>
                <tr style="height:30px;"> 
                    <td class="textLeftL">是否进行入库操作</td>
                    <td class="textRightL" colspan="3"><input type="button" id="InStock" class="btn" value="点击入库" /></td>
                </tr>
            </table>
        </div>

        <div style="float:right; margin-top:10px;">
           <input type="submit" id="QD" class="btn" value=" 确 定 " style="margin-right:10px;"/> 
           <br />
       </div>

    </div>
         
     }

</body>
</html>
