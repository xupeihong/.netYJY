@{
    Layout = null;
}
@using TECOCITY_BGOI;
@model tk_QuotationSearch
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Quotation</title>

    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery_dialog.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Validate/Validate-Injection.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/My97DatePicker/WdatePicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/FlowMeterManage/Quotation.js")" type="text/javascript"></script>
</head>
@{
    Acc_Account account = GAccount.GetAccountInfo();
    int Rights = account.UserID;
}
<body>
    @using (Html.BeginForm("Quotation", "FlowMeterManage", FormMethod.Post, new { id = "GForm" }))
    {
        <div id="pageContent">
            <div class="mainHead">
                <img src="../images/house.png" class="house" />&nbsp;&nbsp;&nbsp;&nbsp;当前位置>><span style="color: #000099;">流量计维修</span>>>报价管理
            </div>
            <div id="search" style="height: 40px;">
                <table class="tabSearch" cellpadding="0" cellspacing="0">
                    <tr style="height: 30px;">
                        <td>登记卡号</td>
                        <td>@Html.TextBoxFor(model => model.StrRID, new { @class = "txtCss" }) @Html.ValidationMessageFor(model => model.StrRID)</td>
                        <td>仪表类型</td>
                        <td>@Html.DropDownList("CardType", FlowMeterMan.getConfigContent("CardType"), new { @class = "txtCss", style = "width:167px;" })</td>
                        <td>缴费状态</td>
                        <td>
                            @Html.DropDownListFor(model => model.StrType, FlowMeterMan.getConfigState("BJState"), new { @class = "txtCss" })
                        </td>
                        <td colspan="6">
                            <input type="button" id="CX" class="btn" value="查询" onclick="reload();" /></td>
                    </tr>

                </table>
            </div>

            <div style="margin-top: 5px; margin-left: 10px;">
                @if (Rights != 321)
                {  
                    <input class="btnL" type="button" id="CKXQ" value="查看详情" />
                    <input class="btnL" type="button" id="XGBJ" value="修改报价单" />
                    <input class="btnL" type="button" id="CXBJ" value="撤销报价单" />
                    <input class="btnL" type="button" id="HZBJ" value="汇总报价单" />
                }
            </div>

            <div id="bor" style="width: 100%; margin-top: 5px; margin-left: 10px;">
                <table id="list" class="scroll" style="width: 100%;"></table>
                <div id="pager" class="scroll" style="text-align: center; width: 100%;"></div>
            </div>

        </div>

    }

</body>
</html>
