@{
    Layout = null;
}
@using TECOCITY_BGOI;
@model tk_TakeDelivery

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditDelivery</title>
    
    <link href="@Url.Content("~/CSS/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery_dialog.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")"  type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Validate/Validate-Injection.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/My97DatePicker/WdatePicker.js")" type="text/javascript" charset="utf-8"></script>
    <script src="@Url.Content("~/Scripts/FlowMeterManage/EditDelivery.js")" type="text/javascript"></script>

</head>
<body>
    @using (Html.BeginForm("EditDelivery", "FlowMeterManage", FormMethod.Post, new { id = "ProjectformInfo", onsubmit = "return returnConfirm();" }))
    { 
    <div id="pageContent" style="overflow-y:auto;">
       <div style="width:98%;margin-left:10px;margin-top:5px;">
            <table class="tabInfo" id="content" >
                <tr style="height:30px;"> 
                    <td colspan="6" style="text-align:center; font-size:20px; font-weight:bold;">收货单</td>
                </tr>
                <tr style="height:30px;"> 
                    <td class="textRightL" style="text-align:left;" colspan="4"> 基本信息</td>
                </tr>
                <tr style="height:30px;">
                    @Html.HiddenFor(model=>model.strTakeID)
                    @Html.HiddenFor(model=>model.strRID)
                    <td class="textLeftL">收货单号</td>
                    <td class="textRightL">@Model.strTakeID @Html.ValidationMessageFor(model => model.strTakeID)
                    </td>
                </tr>
                <tr style="height:30px;">
                    <td class="textLeftL">登记号</td>
                    <td class="textRightL">@Model.strRID @Html.ValidationMessageFor(model => model.strRID)
                    </td>
                </tr>
                <tr style="height:30px;">
                    <td class="textLeftL">送货单位</td>
                    <td class="textRightL">
                        @Html.TextBoxFor(model => model.strUnitName,  new { @class = "txtCss" })
                    </td>
                </tr>
                <tr style="height:30px;">
                    <td class="textLeftL">送货人</td>
                    <td class="textRightL">
                        @Html.TextBoxFor(model => model.strDeliverName,  new { @class = "txtCss" })
                    </td>
                </tr>
                <tr style="height:30px;">
                    <td class="textLeftL">联系电话</td>
                    <td class="textRightL">
                        @Html.TextBoxFor(model => model.strDeliverTel,  new { @class = "txtCss" })
                    </td>
                </tr>
                <tr style="height:30px;">
                    <td class="textLeftL">送货日期</td>
                    <td class="textRightL">
                        @Html.TextBoxFor(model => model.strDeliverDate, new { onclick = "WdatePicker({dateFmt: 'yyyy-MM-dd' })", @class = "txtCss" })
                    </td>
                </tr>
                <tr style="height:30px;">
                    <td class="textLeftL">收货人</td>
                    <td class="textRightL">
                        @Html.TextBoxFor(model => model.strReceiveName,  new { @class = "txtCss" })
                        <span style="color:red;"> * </span>@Html.ValidationMessageFor(model => model.strReceiveName)
                    </td>
                </tr>
                <tr style="height:30px;">
                    <td class="textLeftL">联系电话</td>
                    <td class="textRightL">
                        @Html.TextBoxFor(model => model.strReceiveTel,  new { @class = "txtCss" })
                    </td>
                </tr>
                <tr style="height:30px;">
                    <td class="textLeftL">收货日期</td>
                    <td class="textRightL">
                        @Html.TextBoxFor(model => model.strReceiveDate,  new { onclick = "WdatePicker({dateFmt: 'yyyy-MM-dd' })", @class = "txtCss" })
                        <span style="color:red;"> * </span>@Html.ValidationMessageFor(model => model.strReceiveDate)
                    </td>
                </tr>
            </table>
        </div>
        <div style="float:right; margin-top:10px;">
           <input type="submit" id="QRXG" class="btn" value="确认修改" style="margin-right:10px;"/> 
            <br /><br />
        </div>
    </div>
    }
</body>
</html>
