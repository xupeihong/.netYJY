@{
    Layout = null;
}
@using TECOCITY_BGOI;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SendTaskCard</title>
    
    <link href="@Url.Content("~/CSS/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery_dialog.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")"  type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Validate/Validate-Injection.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/My97DatePicker/WdatePicker.js")" type="text/javascript" charset="utf-8"></script>
    <script src="@Url.Content("~/Scripts/FlowMeterManage/SendTaskCard.js")" type="text/javascript"></script>
</head>
<body>
    @using (Html.BeginForm("SendTaskCard", "FlowMeterManage", FormMethod.Post, new { id = "ProjectformInfo", onsubmit = "return returnConfirm();" }))
    { 
    <div id="pageContent" style="overflow-y:auto;">
        <div id="tabTitile">
            @Html.Hidden("RID", @ViewData["RID"])
            @Html.Hidden("State", @ViewData["State"])
            <span style="margin-left:10px; text-align:left; font-weight:bold;">
                维修编号：@ViewData["RepairID"]</span>
        </div>
        <div id="TaskInfo">
            <table class="tabInfo" style="margin-left:10px; margin-top:5px; width:95%;">
                <tr style="height:30px;">
                    <td>选择完成时间 &nbsp;&nbsp;&nbsp;&nbsp;
                        @Html.TextBox("FinishDate", "", new { onclick = "WdatePicker({dateFmt: 'yyyy-MM-dd' })", @class = "txtCss" })
                    </td>
                </tr>
            </table>
        </div>
        <div style="width:98%; margin-left:10px;">
            <br />
            <div style="width:49%; float:left;" id="tabGroup">选择组：<br />
                <table id="list1" class="scroll" style="width:100%;"></table> 
                <div id="pager1" class="scroll" style="text-align:center;width:100%;"></div>
            </div>
            <div style="width:49%; float:left;" id="tabPerson">选择人员：<br />
                <table id="list2" class="scroll" style="width:100%;"></table> 
                <div id="pager2" class="scroll" style="text-align:center;width:100%;"></div>
            </div>
        </div>
        @Html.Hidden("SaveUser")
        <div style="width:98%; text-align:left; margin-top:10px; margin-right:20px;">
           <input id="QD" class="btn" value=" 确 定 " type="submit" style="float:right; margin-top:10px;"/>
        </div>
    </div>       
    }
</body>
</html>
