@{
    ViewBag.Title = "";
}

@{
    Layout = null;
}
@using TECOCITY_BGOI;
@model PP_Inquirys

<html>
<head>
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Cache-Control" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <title>ScrapManagementOut</title>
    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/Inventory/AddStockIn.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/cmm_ClassControl.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/My97DatePicker/WdatePicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/PP/ProjectPP/UpdateXJXX.js")" type="text/javascript"></script>

</head>

<body>
    @using (Html.BeginForm("Inquiry", "PPManage", FormMethod.Post, new { id = "ProjectformInfo" }))
    {
        <form>
            <div id="createAll" style="background-color: #ffffff; width: 100%; ">
                <div id="biaoti">
                    <h1 class="title">修改询价单</h1>
                </div>
                <div>
                    <table border="0" cellpadding="0" cellspacing="0" width="98%" class="tabInfo">
                        <tr>
                            <td class="textleft" width="20%">
                                询价标题
                            </td>
                            <td class="textright" width="20%"><span style="color: red;">*</span>
                                @Html.TextBox("InquiryTitle", "", new { @class = "txtCss" }) &nbsp;
                            </td>
                            <td class="textleft" width="20%">
                                询价日期
                            </td>
                            <td><span style="color: red;">*</span>
                                <input type="text" id="InquiryDate" onclick="WdatePicker()" class="Wdate" style="width:170px;" />
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <table cellpadding="0" cellspacing="0" class="tabInfo">
                <tr class="PPtr">
                    <td colspan="4">   询价物品</td>
                </tr>
                <tr>
                    <td>
                        <input type="button" class="btn" style="margin-top:3px;" value="添加" onclick="AddNewBasic()" id="btnAdd" name="btnAdd" />&nbsp;
                        <input type="button" class="btn" name="btnDel" value="删除" id="btnDel" onclick="DelRow();" />
                        <div style="overflow-y: scroll;max-height:170px;">
                            <table id="myTable" cellpadding="0" cellspacing="0" class="tabInfo">
                                <tr align="center" valign="middle">
                                    <th class="th">
                                        序号
                                    </th>
                                    <th class="th">
                                        物品名称
                                    </th>
                                    <th class="th">
                                        物品编码
                                    </th>
                                    <th class="th">
                                        规格型号
                                    </th>
                                    <th class="th">
                                        单位
                                    </th>
                                    <th class="th">
                                        数量
                                    </th>
                                    <th class="th">
                                        供应商
                                    </th>
                                    <th class="th">
                                        谈判定价
                                    </th>
                                    <th class="th">
                                        谈判总价
                                    </th>
                                    <th class="th">
                                        税前单价
                                    </th>
                                    <th class="th">
                                        税前总价
                                    </th>
                                
                                </tr>
                                <tbody id="GXInfo"></tbody>
                            </table>
                        </div>
                    </td>
                </tr>


            </table>

            <div style="width: 100%; height: 70px;">
                <table cellpadding="0" cellspacing="0" class="tabInfo" style="margin-top:5px;">
                    <tr class="PPtr">
                        <td colspan="4">   询价说明</td>
                    </tr>
                    <tr>
                        <td class="textleft" width="20%">
                            合同条件
                        </td>
                        <td class="textright" width="80%">
                            @Html.TextBox("ContractCondition", "", new { @class = "txtCss" }) &nbsp;

                        </td>
                    </tr>
                    <tr>
                        <td class="textleft" width="20%">

                            请购说明
                        </td>
                        <td class="textright" width="80%">

                            @Html.TextBox("InquiryExplain", "", new { @class = "txtCss" }) &nbsp;
                        </td>
                    </tr>

                </table>
            </div><br />
            <div style="text-align: left; width: 100%; height: 32px; margin-bottom:10px; ">

            </div>
            <div style="width: 100%; height: 70px;">
                <table cellpadding="0" cellspacing="0" class="tabInfo">
                    <tr class="PPtr">
                        <td colspan="4">   询价人</td>
                    </tr>
                    <tr>
                        <td class="textleft">
                            询价人
                        </td>
                        <td class="textright" colspan="3">
                            @Html.DropDownList("OrderContacts", PPManage.GetUserId(), new { @class = "txtCss" })
                        </td>
                    </tr>
                </table>
            </div>

            <div style="width: 98%; margin-right: 10px; height: 36px; text-align: right;margin-top:10px;">
                <input id="btnSubmit" type="button" class="btn" value="保存" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            </div>
        </form>
    }
</body>
</html>
