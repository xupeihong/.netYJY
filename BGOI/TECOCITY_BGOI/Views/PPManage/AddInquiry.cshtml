@{
    ViewBag.Title = "";
}

@{
    Layout = null;
}
@using TECOCITY_BGOI;
@model PP_Inquirys

<html>
<head>
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Cache-Control" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <title>AddTestStockIn</title>
    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/PP/CreatePurchase.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/My97DatePicker/WdatePicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/PP/ProjectPP/AddInquiry.js")" type="text/javascript"></script>

</head>

<body>
    <form>

        <div id="tabTitile"><span style="margin-left:10px; float:left;">询价编号：@Model.XJID </span></div>@Html.HiddenFor(model => model.XJID)
            
        @*<div id="tabTitile"><span style="margin-left:10px; float:left;">请购单号：@Model.CID </span></div>@Html.HiddenFor(model => model.CID)*@
        <div style="width: 100%;  height:120px;">
            <table class="tabInfo" style="width: 97%;margin-left:8px;margin-top:10px;">
                <tr>
                    <td class="textLeft">自定询价编号</td>
                    <td class="textRight">@Html.TextBoxFor(model => model.OrderNumber, new { @class = "txtCss" })</td>
                    <td class="textLeft">询价标题</td>
                    <td class="textRight">@Html.TextBoxFor(model => model.InquiryTitle, new { @class = "txtCss" })</td>
                </tr>
                <tr>
                    <td class="textLeft">询价人</td>
                    <td class="textRight">@Html.TextBoxFor(model => model.OrderContacts, new { @class = "txtCss" })</td>
                    <td class="textLeft">审批人1</td>
                    <td class="textRight">@Html.TextBoxFor(model => model.Approver1, new { @class = "txtCss" })</td>
                </tr>
                <tr>
                    <td class="textLeft">审批人2</td>
                    <td class="textRight">@Html.TextBoxFor(model => model.Approver2, new { @class = "txtCss" })</td>
                    <td class="textLeft">状态</td>
                    <td class="textRight">@Html.DropDownListFor(model => model.State,PPManage .GetTypeID(" and type='询价单状态'"), new { @class = "txtCss" })</td>
                </tr>
                <tr>
                    <td class="textLeft">业务类型</td>
                    <td class="textRight">@Html.DropDownListFor(model => model.BusinessTypes, PPManage.GetTypeID(" and type ='业务类型'"), new { @class = "txtCss" })</td>
                    <td class="textLeft">询价说明</td>
                    <td class="textRight">@Html.TextBoxFor(model => model.InquiryExplain, new { @class = "txtCss" })</td>
                </tr>
                <tr>
                    <td class="textLeft">询价日期</td>
                    <td class="textRight">@Html.TextBoxFor(model => model.InquiryDate, new { onclick = "WdatePicker()", @class = "txtCss" })</td>

                    <td class="textLeft">交货期限</td>
                    <td class="textRight">@Html.TextBoxFor(model => model.DeliveryLimit, new { @class = "txtCss" })</td>
                </tr>
                <tr>
                    <td class="textLeft">交货方式</td>
                    <td class="textRight">@Html.DropDownListFor(model => model.DeliveryMethod, PPManage.GetTypeID(" and type ='交货方式'"), new { @class = "txtCss" })</td>
                    <td class="textLeft">是否开发票</td>
                    <td class="textRight">@Html.DropDownListFor(model => model.IsInvoice, PPManage.GetTypeID(" and type ='是否开发票'"), new { @class = "txtCss" })</td>
                </tr>
                <tr>
                    <td class="textLeft">支付方式</td>
                    <td class="textRight">@Html.DropDownListFor(model => model.PaymentMethod, PPManage.GetTypeID(" and type ='支付方式'"), new { @class = "txtCss" })</td>
                    <td class="textLeft">付款预约</td>
                    <td class="textRight">@Html.DropDownListFor(model => model.PaymentAgreement, PPManage.GetTypeID(" and type ='付款约定'"), new { @class = "txtCss" })</td>
                </tr>
                <tr>

                    <td class="textLeft">总金额(含税)</td>
                    <td class="textRight">@Html.TextBoxFor(model => model.TotalTax, new { @class = "txtCss" })</td>
                    <td class="textLeft">总金额(不含税)</td>
                    <td class="textRight">@Html.TextBoxFor(model => model.TotalNoTax, new { @class = "txtCss" })</td>
                </tr>
            </table>
            <input type="text" id="TID" style="display:none;" />
        </div>

        <div style="margin-top:220px;margin-left:75%">
            <input class="btn" type="button" id="btnSave" value="确定" />
        </div>
    </form>
</body>
</html>
