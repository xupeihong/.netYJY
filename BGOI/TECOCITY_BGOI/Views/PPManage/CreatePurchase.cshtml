@{
    ViewBag.Title = "";
}

@{
    Layout = null;
}
@using TECOCITY_BGOI;
@model PP_PurchaseRequisition

<html>
<head>
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Cache-Control" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <title>ScrapManagementOut</title>
    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/Inventory/AddStockIn.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/cmm_ClassControl.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/My97DatePicker/WdatePicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/PP/ProjectPP/CreatePurchase.js")" type="text/javascript"></script>

</head>
@{
    string name = GAccount.GetAccountInfo().UserName;
}
<body>
    <form>
        <p>
            <div id="createAll" style="background-color: #ffffff; width: 100%; ">
                <div id="biaoti">
                    <h1 class="title">新建请购单</h1>
                </div>
                <div id="danhao" class ="PPtitle">
                    <span style="margin-left:5px;">请购单号：@Model.CID</span>@Html.HiddenFor(model => model.CID) 
                </div>
                <div>
                    <table border="0" cellpadding="0" cellspacing="0" width="98%" class="tabInfo">
                        <tr>
                            <td>
                                请购日期：
                                @Html.TextBoxFor(model => model.PleaseDate, new { onclick = "WdatePicker({dateFmt: 'yyyy-MM-dd' })", @class = "txtCss" })<span style="color: red;">*</span>
                            </td>
                            <td>
                                编号：
                                @Html.TextBox("OrderNumber", "", new { @class = "txtCss" })
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </p>
        <table cellpadding="0" cellspacing="0" class="tabInfo">
            <tr class="PPtr">
                <td colspan="4">   请购物品</td>
            </tr>
            <tr>
                <td>
                    <input type="button" class="btn" style="margin-top:3px;" value="添加" onclick="AddNewBasic()" id="btnAdd" name="btnAdd" />&nbsp;
                    <input type="button" id="btnDel" class="btn" name="btnDel" value="删除" onclick="DelRow();" />
                    <div style="overflow-y: scroll;max-height:200px;margin-top:3px;">
                        <table id="myTable" cellpadding="0" cellspacing="0" class="tabInfo">
                            <tr align="center" valign="middle">
                          
                                <th class="th">
                                    序号
                                </th>
                                <th class="th">
                                    货品编号
                                </th>
                                <th class="th">
                                    物品名称
                                </th>
                                <th class="th">
                                    规格型号
                                </th>
                                <th class="th">
                                    单位
                                </th>
                                <th class="th">
                                    数量
                                </th>
                                <th class="th">
                                    供货商
                                </th>
                                <th class="th">
                                    预计单价
                                </th>
                                <th class="th">
                                    预计金额
                                </th>
                                <th class="th">
                                    税前单价
                                </th>
                                <th class="th">
                                    税前总价
                                </th>
                         
                            </tr>
                            <tbody id="GXInfo"></tbody>
                        </table>
                    </div>
                </td>
            </tr>
        </table>
   
  
            <table cellpadding="0" cellspacing="0" class="tabInfo" style="margin-top:5px;">
                <tr  class="PPtr">
                    <td colspan="4">   请购说明</td>
                </tr>
                <tr>
                    <td class="textleft">
                        期望交货日期
                    </td>
                    <td class="textright" colspan="3">

                        @Html.TextBoxFor(model => model.DeliveryDate, new { onclick = "WdatePicker()", @class = "txtCss" })<span style="color: red;">*</span>
                    </td>
                </tr>
                <tr>
                    <td class="textleft" width="20%">
                        请购说明
                    </td>
                    <td class="textright" width="100%" rowspan="2">
                        @Html.TextAreaFor(model => model.PleaseExplain, new { @class = "txtCss", style = "width:100%;" })
                    </td>


                </tr>
            </table>
            <table cellpadding="0" cellspacing="0" class="tabInfo"  style="margin-top:5px;">
                <tr  class="PPtr">
                    <td colspan="4">   请购人信息</td>
                </tr>
                <tr>
                    <td class="textleft">
                        请购人
                    </td>
                    <td class="textright" colspan="3">
                        @Html.TextBox("OrderContacts", GAccount.GetAccountInfo().UserName, new { @class = "txtCss" })
                        @*@Html.DropDownList("OrderContacts", PPManage.GetUserId(), new { @class = "txtCss" })*@
                    </td>
                </tr>
            </table>
        <div style="width: 98%; margin-right: 10px; height: 36px; text-align: right;margin-top:10px;">
            <input id="btnSubmit" type="button" class="btn" value="保存" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        </div>
     </form>
</body>
</html>
