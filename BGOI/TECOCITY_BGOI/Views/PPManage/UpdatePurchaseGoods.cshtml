@{
    ViewBag.Title = "";
}

@{
    Layout = null;
}
@using TECOCITY_BGOI;
@model PP_PurchaseRequisition
<html>
<head>
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Cache-Control" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <title>AddTestStockIn</title>
    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/Inventory/AddStockIn.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/cmm_ClassControl.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/My97DatePicker/WdatePicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/PP/ProjectPP/UpdatePurchaseGoods.js")" type="text/javascript"></script>

</head>

<body>
    <form>


        <div style="width: 100%;  height:120px;">
            <table class="tabInfo" style="width: 97%;margin-left:8px;margin-top:10px;">
                <tr>
                    <td class="textLeft">物品名称</td>
                    <td class="textRight">  @Html.TextBox("OrderContent", "", new { @class = "txtCss" })</td>
                    <td class="textLeft">规格型号</td>
                    <td class="textRight">@Html.TextBox("Specifications", "", new { @class = "txtCss" }) </td>
                </tr>
                <tr>
                    <td class="textLeft">单位</td>
                    <td class="textRight"> @Html.TextBox("Unit", "", new { @class = "txtCss" }) </td>
                    <td class="textLeft">数量</td>
                    <td class="textRight">@Html.TextBox("Amount", "", new { @class = "txtCss" })</td>
                </tr>
                <tr>
                    <td class="textLeft">预计单价</td>
                    <td class="textRight">@Html.TextBox("UnitpriceNoTax", "", new { @class = "txtCss" }) </td>
                    <td class="textLeft">预计金额</td>
                    <td class="textRight">@Html.TextBox("TotalNoTax", "", new { @class = "txtCss" })</td>
                </tr>
                <tr>
                    <td class="textLeft">用途</td>
                    <td class="textRight">@Html.TextBox("Use", "", new { @class = "txtCss" }) </td>
                    <td class="textLeft">备注</td>
                    <td class="textRight">@Html.TextBox("Remark", "", new { @class = "txtCss" })</td>
                </tr>
                <tr>
                    <td class="textLeft">请购日期</td>
                    <td class="textRight"><input type="text" id="PleaseDate" onclick="WdatePicker()" class="Wdate" style="width:170px;" /> </td>
                    <td class="textLeft">期望交货日期</td>
                    <td class="textRight"><input type="text" id="PurchaseDate" onclick="WdatePicker()" class="Wdate" style="width:170px;" /></td>
                </tr>
                <tr>
                    <td class="textLeft">请购说明</td>
                    <td class="textRight">@Html.TextBox("PleaseExplain", "", new { @class = "txtCss" })</td>
                    <td class="textLeft">请购人</td>
                    <td class="textRight">
                        @Html.DropDownList("OrderContacts", PPManage.GetUserId(), new { @class = "txtCss" })
                </td>
            </tr>

        </table>
        <input type="text" id="TID" style="display:none;" />
    </div>

    <div style="margin-top:220px;margin-left:75%">
        <input class="btn" type="button" id="btnSave" value="确定" />
    </div>
</form>
</body>
</html>
