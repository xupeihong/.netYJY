    <script src="@Url.Content("~/Scripts/PP/ProjectPP/LJSplits.js")" type="text/javascript"></script>
    <style>
        .ui-jqgrid tr.jqgrow td {
            white-space: normal !important;
            height: auto;
            vertical-align: text-top;
            padding-top: 2px;
        }
    </style>
</head>
<body>
    <div id="pageContent" style="overflow-y:scroll; ">
        <table cellpadding="0" cellspacing="0" class="tabInfo" style="margin-top:5px;">
            <tr class="PPtr">
                <td colspan="4">可拆分的零件</td>
            </tr>
            <tr>

                <td>
                    <div style="overflow-y: scroll;max-height:500px;">
                        <table id="myTable" cellpadding="0" cellspacing="0" class="tabInfo">
                            <tr align="center" valign="middle">
                                <th class="th">
                                    序号
                                </th>
                                <th class="th">
                                    成品ID
                                </th>
                                <th class="th">
                                    成品名称
                                </th>
                                <th class="th">
                                    零件名称
                                </th>

                                <th class="th">
                                    数量
                                </th>

                                <th class="th">
                                    操作
                                </th>
                            </tr>
                            <tbody id="GXInfo"></tbody>
                        </table>
                    </div>
                </td>
            </tr>

        </table>


        <table cellpadding="0" cellspacing="0" class="tabInfo" style="margin-top:5px;">
            <tr class="PPtr">
                <td colspan="4">已拆分的零件</td>
            </tr>
            <tr>

                <td>
                    <div style="overflow-y: scroll;max-height:500px;">
                        <table id="myTable" cellpadding="0" cellspacing="0" class="tabInfo">
                            <tr align="center" valign="middle">
                                <th class="th">
                                    序号
                                </th>
                                <th class="th">
                                    成品ID
                                </th>
                                <th class="th">
                                    零件ID
                                </th>
                                <th class="th">
                                    零件名称
                                </th>
                                <th class="th">
                                    规格型号
                                </th>
                                <th class="th">
                                    数量
                                </th>
                                <th class="th">
                                    单位
                                </th>
                                <th class="th">
                                    税前单价
                                </th>
                                <th class="th">
                                    税前总价
                                </th>
                                <th class="th">
                                    税后单价
                                </th>
                                <th class="th">
                                    税后总价
                                </th>

                            </tr>
                            <tbody id="GXInfo1"></tbody>
                        </table>
                    </div>
                </td>
            </tr>

        </table>
        <input type="button" id="btnSubmit"  class="btn" name="btnSel" value="确定" />
    </div>
</body>
</html>
