    <form style="overflow-y: scroll;width:1105px;height:680px">
        <div>
            <div id="createAll" style="background-color: #ffffff; width: 100%; ">
                <div id="biaoti">
                    <h1 class="title">订购单详情</h1>
                </div>

                <div>
                    <table border="0" cellpadding="0" cellspacing="0" width="98%" class="tabInfo">
                        <tr>
                            <td>
                                订购日期
                            </td>
                            <td id="OrderDate"></td>
                            <td>
                                订购单号
                            </td>
                            <td id="DDID"></td>
                        </tr>

                    </table>
                </div>
            </div>
            <div style="margin-top:5px;margin-left:1px;">
                <table border="0" cellpadding="0" cellspacing="0" width="98%" class="tabInfo">
                    <tr>
                        <td>
                            业务类型
                        </td>
                        <td id="xzrwlx"></td>
                        <td>
                            任务单号
                        </td>
                        <td id="TaskNum"></td>
                    </tr>
                </table>
