                                <tr align="center" valign="middle">
                                    <th style="width: 5%;" class="th">
                                        序号
                                    </th>
                                    <th style="width: 15%;" class="th">
                                        物品名称
                                    </th>
                                    <th style="width: 10%;" class="th">
                                        规格型号
                                    </th>
                                    <th style="width: 10%;" class="th">
                                        物料编码
                                    </th>
                                    <th style="width: 5%;" class="th">
                                        单位
                                    </th>
                                    <th style="width: 5%;" class="th">
                                        数量
                                    </th>
                                    <th style="width: 10%;" class="th">
                                        供应商
                                    </th>
                                    <th style="width: 15%;" class="th">
                                        单价
                                    </th>
                                    <th style="width: 10%;" class="th">
                                        总金额
                                    </th>
                           
                                </tr>

                                <tbody id="GXInfo"></tbody>
                            </table>
                        </div>
                    </td>
                </tr>


            </table>*@
            <div id="supplier" style="  margin-left: 10px; margin-top: 3px;">

            </div>
            <div id="bor1" style="overflow-y: scroll;">

            </div>
            <table cellpadding="0" cellspacing="0" class="tabInfo" style="margin-top:5px;">
                <tr class="PPtr">
                    <td colspan="10">   相关约定</td>
                </tr>
                <tr>
                    <td>
                        交货期限
                    </td>
                    <td colspan="3" width=" 125px" id="Begin"></td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <td>
                        交货方式
                    </td>
                    <td colspan="3" width=" 200px" id="DeliveryMethod"></td>
                    <td>
                        是否开发票
                    </td>
                    <td colspan="3" width=" 200px" id="IsInvoice"></td>
                </tr>

                <tr></tr>
                <tr>
                    <td>
                        支付方式
                    </td>
                    <td colspan="3" width="12px" id="PaymentMethod"></td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <td>
                        付款约定
                    </td>
                    <td colspan="3" id="PaymentAgreement"></td>
                </tr>
                <tr>
                    <td>
                        合同编号
                    </td>
                    <td colspan="3" id="ContractNO"></td>
                    <td>
                        所属项目
                    </td>
                    <td colspan="3" id="TheProject"></td>
                </tr>
            </table>



            <div style="width: 100%; margin-top:20px; height: 30px;">
                <table cellpadding="0" cellspacing="0" class="tabInfo"></table>
            </div>
            @*</div><br />*@

            <div style="width: 100%; height: 70px;">
                <table cellpadding="0" cellspacing="0" class="tabInfo" style="margin-top:5px;">
                    <tr class="PPtr">
                        <td colspan="4">   订购人信息</td>
                    </tr>
                    <tr>
                        <td class="textleft" width="20%">
                            订购人
                        </td>
                        <td class="textright" colspan="3" id="OrderContacts"></td>
                    </tr>
                </table>
            </div>

