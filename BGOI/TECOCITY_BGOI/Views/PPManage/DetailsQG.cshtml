@{
    ViewBag.Title = "";
}

@{
    Layout = null;
}
@using TECOCITY_BGOI;
@model PP_PurchaseRequisition

<html>
<head>
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Cache-Control" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <title>ScrapManagementOut</title>
    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/Inventory/AddStockIn.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/cmm_ClassControl.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/My97DatePicker/WdatePicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/PP/ProjectPP/DetailsQG.js")" type="text/javascript"></script>


</head>

<body>
    <form>
        <p>
            <div id="createAll" style="background-color: #ffffff; width: 100%; ">
                <div id="biaoti">
                    <h1 class="title">请购单详情</h1>
                </div>
        
                @*<div id="danhao" class="PPtitle">
                    <span style="margin-left:5px;">请购单号：@Model.CID</span>@Html.HiddenFor(model => model.CID)
                </div>*@
                <div>
                    <table border="0" cellpadding="0" cellspacing="0" width="98%" class="tabInfo">
                        <tr>
                            <td width="100px">
                                请购日期：
                                @*@Html.TextBoxFor(model => model.PleaseDate, new { onclick = "WdatePicker({dateFmt: 'yyyy-MM-dd' })", @class = "txtCss" })*@
                            </td>
                            <td id="PleaseDate">
                                请购日期：
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </p>
        <table cellpadding="0" cellspacing="0" class="tabInfo">
            <tr class="PPtr">
                <td colspan="4">   请购物品</td>
            </tr>
            <tr>
                <td>
               
                    <div style="overflow-y: scroll;max-height:200px;margin-top:3px;">
                        <table id="myTable" cellpadding="0" cellspacing="0" class="tabInfo">
                            <tr align="center" valign="middle">
                                <th class="th">
                                    序号
                                </th>
                                <th class="th">
                                    物品编码
                                </th>
                                <th class="th">
                                    物品名称
                                </th>
                                <th class="th">
                                    规格型号
                                </th>

                                <th class="th">
                                    单位
                                </th>
                                <th class="th">
                                    数量
                                </th>

                                <th class="th">
                                    预计单价
                                </th>
                                <th class="th">
                                    预计金额
                                </th>
                                <th class="th">
                                    税前单价
                                </th>
                                <th class="th">
                                    税前总价
                                </th>
                            
                            </tr>
                            <tbody id="GXInfo"></tbody>
                        </table>
                    </div>
                </td>
            </tr>
        </table>


        <table cellpadding="0" cellspacing="0" class="tabInfo" style="margin-top:5px;">
            <tr class="PPtr">
                <td colspan="4">   请购说明</td>
            </tr>
            <tr>
                <td class="textleft">
                    期望交货日期
                </td>
                <td class="textright" colspan="3" id="DeliveryDate">

                    @*@Html.TextBoxFor(model => model.DeliveryDate, new { onclick = "WdatePicker()", @class = "txtCss" })*@
                </td>
            </tr>
            <tr>
                <td class="textleft" width="20%">
                    请购说明
                </td>
                <td class="textright" width="100%" rowspan="2" id="PleaseExplain">
                    @*@Html.TextAreaFor(model => model.PleaseExplain, new { @class = "txtCss", style = "width:100%;" })*@
                </td>


            </tr>
        </table>
        <table cellpadding="0" cellspacing="0" class="tabInfo" style="margin-top:5px;">
            <tr class="PPtr">
                <td colspan="4">   请购人信息</td>
            </tr>
            <tr>
                <td class="textleft" width="20%">
                    请购人
                </td>
                <td class="textright" colspan="3" id="OrderContacts">
                    @*@Html.DropDownList("OrderContacts", PPManage.GetUserId(), new { @class = "txtCss" })*@
                </td>
            </tr>
        </table>
    

     
    </form>
</body>
</html>
