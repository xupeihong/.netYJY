@{
    Layout = null;
}
@using TECOCITY_BGOI;
@model Acc_Login
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="@Url.Content("~/CSS/login.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Login/Login.js")" type="text/javascript"></script>

     <style type="text/css">
        input[type="text"], input[type="password"]
        {
            font-size: 1.2em;
            color: #696969;
            width: 150px;
            height: 20px;
            /*border: none;*/
            margin-top:-10px;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { enctype = "multipart/form-data", id = "form1" }))
    {
    <div id="LoginAll">
        <div id="top"> </div>

        <div id="middle">
                <div id="fieldset">
                    <div class="big">
                    <div class="title">
                        <div class="logo"></div>
                        <div class="tm">
                        <div class="T1"></div>
                        <div class="T2"></div>
                       </div>
                        <div class="T3"></div>
                    </div>
                    <div id="Main">
                        
                        <div class="lt"></div>
                        <div class="LU">
                         <div class="user">用户名:</div>
                          <div class="Tuser"> @Html.TextBoxFor(m => m.UserName)</div>
                        </div>
                         <div class="LP">
                            <div class="pass">密码:</div>
                          <div class="Tp"> @Html.PasswordFor(m => m.Password)</div>
                        </div>
                        
                <div class="editor-labelwS">
                    <span style="font-weight:bold;color:red"> @Html.ValidationMessage("err")</span>
                </div>
                         <div class="Ffoot">
                          <input type="submit" class="btn" style="margin-left:45%" value="登录"/>
                          <input type="button" id="logon" class="btn" style="margin-left:5px;" value="退出"/>
                    </div>
                    </div>
                 </div>  
              </div>
            <div id="bigBack">
                <div class="Fb"></div>
            </div>
        </div>

          <div id="foot"></div>
    </div>
       
    }
</body>
</html>
