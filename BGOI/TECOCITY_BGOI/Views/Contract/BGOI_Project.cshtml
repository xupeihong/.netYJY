@{
    Layout = null;
}
@using TECOCITY_BGOI;
@model tk_ProjectSearch
<!DOCTYPE html>

<html>
<head>
    @*    <meta name="viewport" content="width=device-width" />*@
    <title>BGOI_Project</title>
    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery_dialog.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Contract/BGOI_Project.js")" type="text/javascript"></script>
    <style>
        .ui-jqgrid tr.jqgrow td {
            white-space: normal !important;
            height: auto;
            vertical-align: text-top;
            padding-top: 2px;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("BGOI_Project", "Contract", FormMethod.Post, new { id = "GForm" }))
    {
        <div id="pageContent">
             <div id="search" style="height:65px;">
       <div style="width:80%;float:left;height:63px;">
         <table class="tabSearch" cellpadding="0" cellspacing="0">
             <tr>
                 <td>内部编号 @Html.TextBoxFor(model => model.ProID, new { @class = "txtCss" }) @Html.ValidationMessageFor(model => model.ProID)
                     &nbsp;&nbsp;&nbsp;&nbsp;项目名称 @Html.TextBoxFor(model => model.Pname, new { @class = "txtCss" }) @Html.ValidationMessageFor(model => model.Pname)

                 </td>
             </tr>
             <tr style="height:30px;">
                 <td>创建时间 @Html.TextBoxFor(model => model.StartDate, new { onclick = "WdatePicker({dateFmt: 'yyyy-MM-dd' })", @class = "txtCss" })@Html.ValidationMessageFor(model => model.StartDate) -  @Html.TextBoxFor(model => model.EndDate, new { onclick = "WdatePicker({dateFmt: 'yyyy-MM-dd' })", @class = "txtCss" }) @Html.ValidationMessageFor(model => model.EndDate)</td>
             </tr>
         </table>
        </div>
        <div style="width:14%;height:63px;float:right;line-height:63px;"><input class="btn" style="margin-top:30px;" type="button"  value="查  询" onclick="reload()"/></div>
    </div>

            <div id="bor" style="width: 100%; margin-top: 5px; margin-left: 10px;">
                <table id="list" class="scroll" style="width: 100%;"></table>
                <div id="pager" class="scroll" style="text-align: center; width: 100%;"></div>
            </div>

            <div style="margin-top: 10px; margin-left: 80%">
                <input class="btn" type="button" id="QD" value="确定" />
            </div>
        </div>
    }
</body>
</html>
