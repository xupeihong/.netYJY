                <tr>
                    <td class="textLeft">电话/传真</td>
                    <td class="textRight">@Html.TextBox("Tel", "", new { @class = "txtCss",@readonly="readonly" })</td>
                    <td class="textLeft">联系人</td>
                    <td class="textRight" >@Html.TextBox("ContactPerson", "", new { @class = "txtCss",@readonly="readonly" })</td>
                </tr>
                <tr>
