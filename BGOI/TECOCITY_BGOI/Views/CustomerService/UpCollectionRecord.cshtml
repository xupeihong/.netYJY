@{
    ViewBag.Title = "";
}

@{
    Layout = null;
}
@using TECOCITY_BGOI;
@model tk_CollectionRecord

<html>
<head>
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Cache-Control" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <title>tk_CollectionRecord</title>
    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/Inventory/AddStockIn.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")"  type="text/javascript"></script>
   @* <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Validate/Validate-Injection.js")" type="text/javascript"></script>*@

    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/cmm_ClassControl.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/My97DatePicker/WdatePicker.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/CustomerServiceManage/UpCollectionRecord.js")" type="text/javascript"></script>

</head>

<body>
    <form>
        <div id="tabTitile"><span style="margin-left: 10px; float: left;">编号：@Model.CRID </span></div>@Html.HiddenFor(model => model.CRID)

        <div style="width:800px;height:20px;float: left;" id="shijian">
            <span style="margin-left: 480px; float: left;">登录日期:</span><div id="localtime" style="float: right;"></div>
        </div>
        <div style="width: 100%; text-align: left;">
              <table class="tabInfo" style="width: 97%; margin-left: 8px; margin-top: 10px;">
                <tr style="text-align: center; font: bold; margin-top: 20px; font-size: 24px;">
                    <td colspan="4">收款记录</td>
                </tr>
                    <tr>
                    <td class="textLeft">开票记录编号</td>
                    <td class="textRight" colspan="2"> @Model.BRDID </td>@Html.HiddenFor(model => model.BRDID)
                </tr>
                <tr>
                    <td class="textLeft">付款单位</td>
                    <td class="textRight">@Html.TextBoxFor(model => model.PaymentUnit, new { @class = "txtCss" })@Html.ValidationMessageFor(model => model.PaymentUnit)</td>
                    <td class="textLeft">收款额</td>
                    <td class="textRight">@Html.TextBoxFor(model => model.CollectionAmount, new { @class = "txtCss" })@Html.ValidationMessageFor(model => model.CollectionAmount)</td>
                </tr>
                <tr>
                    <td class="textLeft">付款内容</td>
                    <td class="textRight" colspan="3">@Html.TextAreaFor(model => model.PaymentContent, new { @class = "txtCss", @style = "width:720px;height:50px;" })@Html.ValidationMessageFor(model => model.PaymentContent)
                    </td>
                </tr>
                <tr>
                    <td class="textLeft">付款方式</td>
                    @*<td class="textRight">@Html.TextBoxFor(model => model.PaymentMethod, new { @class = "txtCss" })@Html.ValidationMessageFor(model => model.PaymentMethod)</td>*@
                      <td>
                        @Html.RadioButton("PaymentMethod", "0")汇款 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 
                        @Html.RadioButton("PaymentMethod", "1")支票 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        @Html.RadioButton("PaymentMethod", "2")现金 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    </td>
                    
                    
                    <td class="textLeft">收款人</td>
                    <td class="textRight">@Html.TextBoxFor(model => model.PaymentPeo, new { @class = "txtCss" })@Html.ValidationMessageFor(model => model.PaymentPeo)</td>
                </tr>
                <tr>
                    <td class="textLeft">日期</td>
                    <td class="textRight">
                        <input type="text" id="CRTime" onclick="WdatePicker()" class="Wdate" style="width: 170px;" /></td>
                    <td class="textLeft">公司财务</td>
                    <td class="textRight">@Html.TextBoxFor(model => model.CorporateFinance, new { @class = "txtCss"})@Html.ValidationMessageFor(model => model.CorporateFinance)</td>
                </tr>
                <tr>
                    <td class="textLeft">备注</td>
                    <td class="textRight" colspan="5">@Html.TextAreaFor(model => model.Remark, new { @class = "txtCss", @style = "width:720px;height:50px;" })@Html.ValidationMessageFor(model => model.Remark)</td>
                </tr>
                <tr>
                    <td class="textLeft">登记人</td>
                    <td class="textRight" colspan="5">@Html.TextBoxFor(model => model.CreateUser, new { @class = "txtCss", @readonly = "true" })</td>
                </tr>
            </table>
        </div>
        <div style="margin-top: 10px; margin-left: 75%">
            
            <input class="btn" type="button" id="btnSave" value="保存" />
            <input class="btn" type="button" id="Cancel" value="取消" />
            <input id="Hidden1" type="hidden" />
        </div>
    </form>
</body>
</html>
