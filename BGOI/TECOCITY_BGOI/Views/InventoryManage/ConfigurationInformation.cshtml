@{
    Layout = null;
}
@using TECOCITY_BGOI;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ConfigurationInformation</title>

    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery_dialog.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/InventoryManage/ConfigurationInformation.js")" type="text/javascript"></script>

    @{
        Acc_Account unitname = GAccount.GetAccountInfo();
        string UnitIDnew = unitname.UnitID;
        string UnitIDo = unitname.Path;
        
    }
    @Html.Hidden("UnitIDnew", UnitIDnew)
    @Html.Hidden("UnitIDo", UnitIDo)

    <style>
        .ui-jqgrid tr.jqgrow td {
            white-space: normal !important;
            height: auto;
            vertical-align: text-top;
            padding-top: 2px;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("ConfigurationInformation", "InventoryManage", FormMethod.Post, new { id = "GForm" }))
    {
        <div id="pageContent">
            <div class="mainHead">
                <img src="../images/house.png" class="house" />&nbsp;&nbsp;&nbsp;&nbsp;当前位置>><span style="color: #000099;">系统设置</span>>>公共信息维护
            </div>
            <div id="search" style="height: 40px;">
                <div style="margin-top: 10px; margin-left: 20px;">
                    选择您要编辑的内容：
                      
                            <select id="sel" style="width: 200px" runat="server" onchange="change()">
                                <option value="0">--请选择--
                                </option>
                                @if (UnitIDo.IndexOf(".47.") >= 0)
                                {
                                    <option value="1">--规格型号--
                                    </option>
                                }
                                <option value="2">--出库用途--
                                </option>
                            </select>
                    @* @Html.DropDownList("sel", FlowSystemMan.GetBasicContent(), new { @class = "txtCss", onchange = "change()" })*@
                </div>
            </div>
            <div style="margin-top: 5px; margin-left: 10px;">
                <input class="btn" type="button" id="XZ" value="新增" />
            </div>

            <div id="bor" style="width: 100%; margin-top: 5px; margin-left: 10px;">
                <table id="list" class="scroll" style="width: 100%;"></table>
                <div id="pager" class="scroll" style="text-align: center; width: 100%;"></div>
            </div>
        </div>
    }
</body>
</html>
