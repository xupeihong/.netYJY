@using TECOCITY_BGOI;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN">
    <title>ChangeBasic</title>
    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery_dialog.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/InventoryManage/ChangeBasic.js")" type="text/javascript"></script>
    <style>
        .ui-jqgrid tr.jqgrow td {
            white-space: normal !important;
            height: auto;
            vertical-align: text-top;
            padding-top: 2px;
        }

        #ulGJ li:hover {
            background: #bcf492;
        }

        .selDiv {
            /*margin-left:-100%;*/
            background: #f5f5f5;
            text-align: center;
            display: none;
            width: 190px;
            max-height: 116px;
            overflow-x: hidden;
            overflow-y: scroll;
            position: absolute;
            border: 1px solid #7f9cba;
        }

        .selDivp {
            /*margin-left:-100%;*/
            background: #f5f5f5;
            text-align: center;
            display: none;
            width: 150px;
            max-height: 116px;
            overflow-x: hidden;
            overflow-y: scroll;
            position: absolute;
            border: 1px solid #7f9cba;
        }
    </style>
</head>

<body>
  <form>
        <div id="search1" style="height: 40px; width: 750px">
            <table class="tabSearch" cellpadding="0" cellspacing="0">
                <tr>
                    <td>产品编号</td>
                    <td>@Html.TextBox("PID", "", new { @class = "txtCss" })</td>

                    <td>规格型号</td>
                    @* <td>@Html.DropDownList("Spec", InventoryMan.GetSpec(), new { @class = "txtCss", style = "width:167px;" })</td>*@
                    <td>@Html.TextBox("Spec", "", new { style = "width:190px;" })
                        <div id="divGJ"style="z-index:1000" class="selDiv" onmouseover="isOut=false;" onmouseout="isOut=true;">
                            <ul id="ulGJ" style="list-style: none;">
                            </ul>
                        </div>
                    </td>
                    <td>
                        <input type="button" id="CX" class="btn" value="查 询" onclick="SearchOut()" />
                    </td>
                </tr>
            </table>
        </div>
        <div style="width: 760px;">
            <div id="AListInfo1" style="padding-left: 10px; float: left; width: 96px;">
                <table id="RUnitList" style="width: 96px;"></table>
            </div>

            @* <div id="bor" style="width: 434px; padding-left: 10px; float: left">
                <table id="list" class="scroll" style="width: 100%;"></table>
                <div id="pager" class="scroll" style="text-align: center; width: 100%;"></div>
            </div>*@

            <div id="bor" style="width: 644px; padding-left: 10px; float: left">
                <table id="list" class="scroll tabInfo" style="width: 100%;" cellpadding="0" cellspacing="0">
                    <tr align="center" valign="middle">
                        <td style="width: 5%;" class="th">序号
                        </td>
                        <td style="width: 15%;" class="th">产品编号
                        </td>
                        <td style="width: 15%;" class="th">产品名称
                        </td>
                        <td style="width: 15%;" class="th">物料编码
                        </td>
                        <td style="width: 20%;" class="th">规格型号
                        </td>
                        <td style="width: 10%;" class="th">单价
                        </td>
                        <td style="width: 10%;" class="th">供应商
                        </td>
                        <td style="width: 10%;" class="th">产品类型
                        </td>
                    </tr>
                    <tbody id="DetailInfo"></tbody>
                </table>
                <div id="pager" class="scroll" style="text-align: center; width: 100%;"></div>
            </div>

        </div>
        <div style="margin-top: 10px; margin-left: 75%">
            <input class="btn" type="button" id="btnSave" value="确定" />
        </div>
      
  </form>
</body>
</html>
