@using TECOCITY_BGOI;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN">
    <title>ChangeBasic</title>
    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery_dialog.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css"/>
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ProduceManage/ChangeT.js")" type="text/javascript"></script>
    <style>
        .ui-jqgrid tr.jqgrow td
        {
            white-space: normal !important;
            height: auto;
            vertical-align: text-top;
            padding-top: 2px;
        }
    </style>
</head>

<body>
    <form>
        <div style="width: 800px; height: 500px;">
            <div id="search" style="height: 50px; width: 780px;">
                <table class="tabSearch" cellpadding="0" cellspacing="0" style="">
                    <tr>
                        <td>物品 @Html.TextBox("OrderContent", "", new { @class = "txtCss" }) &nbsp;&nbsp;&nbsp;&nbsp;
                     规格型号 @Html.DropDownList("SpecsModels", ProduceMan.GetProSpecsModels(), new { @class = "txtCss" }) &nbsp;&nbsp;&nbsp;&nbsp;
                     <input class="btn" type="button" value="查  询" onclick="SearchOut()" />&nbsp;&nbsp;&nbsp;&nbsp;
                   
                        </td>
                    </tr>
                </table>
            </div>
            <div id="bor" style="width: 780px; padding-left: 10px; float: left">
                <table id="list" class="scroll" style="width: 100%;"></table>
                <div id="pager" class="scroll" style="text-align: center; width: 100%;"></div>
            </div>

            <div style="margin-top: 10px; margin-left: 75%;">
                <input class="btn" type="button" id="btnSave" value="确定" />
            </div>
        </div>
    </form>
</body>
</html>
