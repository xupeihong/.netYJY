@{
    ViewBag.Title = "";
}

@{
    Layout = null;
}
@using TECOCITY_BGOI;
@model tk_ProductRecord

<html>
<head>
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Cache-Control" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <title>AddTask</title>
    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/Inventory/AddStockIn.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/cmm_ClassControl.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/My97DatePicker/WdatePicker.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/ProduceManage/SGJL.js")" type="text/javascript"></script>
    <style type="text/css">
        .RowClass
        {
            background-color: #efd2d2;
        }

        .txtCss
        {
            width: 85px;
        }

        .new
        {
            width: 135px;
        }
    </style>
</head>
<body>
    <form>
        <div id="search1" style="height: 530px; width: 780px;">
            <h1>随工单记录</h1>
            <div style="height: 30px;">

                <table class="tabSearch" cellpadding="0" cellspacing="0" style="">
                    <tr>
                        <td>任务单号:@Model.RWID @Html.HiddenFor(model => model.RWID)
                            编号:@Model.ID @Html.HiddenFor(model => model.ID)
                            负责人:@Model.CreateUser @Html.HiddenFor(model => model.CreateUser)
                            发单日期:@ViewData["billing"] @Html.HiddenFor(model => model.billing)
                        </td>
                    </tr>
                </table>
            </div>
            <div id="aa" style="height: 5px"></div>
            <div id="a" style="background-color: #0099FF; Color: white; height: 20px; width: 100%; font-size: 15px; text-align: left; line-height: 20px">产品信息</div>
            <div style="width: 97%; margin-left: 8px; margin-top: 10px;">
                <tr>
                    <div style="overflow-y: scroll; max-height: 100px;">
                        <table id="myTable" cellpadding="0" cellspacing="0" class="tabInfo">
                            <tr align="center" valign="middle">
                                <th style="width: 5%;" class="th">序号
                                </th>
                                <th style="width: 10%;" class="th">产品编码
                                </th>
                                <th style="width: 15%;" class="th">产品名称
                                </th>
                                <th style="width: 15%;" class="th">规格型号
                                </th>
                                <th style="width: 10%;" class="th">单位
                                </th>
                                <th style="width: 10%;" class="th">数量
                                </th>
                                <th style="width: 15%;" class="th">图纸号
                                </th>
                                <th style="width: 20%;" class="th">备注
                                </th>
                                <th style="width: 0; display: none" class="th"></th>
                            </tr>
                            <tbody id="DetailInfo">
                            </tbody>
                        </table>
                    </div>
                </tr>
            </div>
            <div id="b" style="height: 5px"></div>
            <div id="bb" style="background-color: #0099FF; Color: white; height: 20px; width: 100%; font-size: 15px; text-align: left; line-height: 20px; padding-top: 5px;">记录信息</div>
            <div id="c" style="width: 50px; height: 20px">
                <input type="button" style="background-color: #0099FF" value="添加" onclick="Add()" /></div>
            <div style="width: 97%; margin-left: 8px; margin-top: 10px;">
                <tr>
                    <div style="overflow-y: scroll; max-height: 135px;">
                        <table id="myTable" cellpadding="0" cellspacing="0" class="tabInfo" border="1">
                            <tr align="center" valign="middle">
                                <th style="width: 5%;" class="th" rowspan="2">序号
                                </th>
                                <th style="width: 5%;" class="th" rowspan="2">工序
                                </th>
                                <th style="width: 10%;" class="th" rowspan="2">班组
                                </th>
                                <th style="width: 10%;" class="th" rowspan="2">预计完成日期
                                </th>
                                <th style="width: 5%;" class="th" rowspan="2">责任人
                                </th>
                                <th style="width: 5%;" class="th" rowspan="2">计划数量
                                </th>
                                <th style="width: 5%;" class="th" colspan="4">完成数量
                                </th>
                                <th style="width: 10%;" class="th" rowspan="2">实际完工日期
                                </th>
                                <th style="width: 10%;" class="th" rowspan="2">检验员
                                </th>
                                <th style="width: 10%;" class="th" rowspan="2">原因分析或说明
                                </th>
                                 <th style="width: 10%;" class="th" rowspan="2">技术负责人
                                </th>
                                <th style="width: 10%;" class="th" rowspan="2">操作
                                </th>
                            </tr>
                            <tr>
                                <th style="width: 5%;" class="th">合格
                                </th>
                                <th style="width: 5%;" class="th">返修
                                </th>
                                <th style="width: 5%;" class="th">变更
                                </th>
                                <th style="width: 5%;" class="th">废品
                                </th>
                            </tr>
                            <tbody id="DetailInfos">
                            </tbody>
                        </table>
                    </div>
                </tr>
            </div>
            <div id="b1" style="height: 5px"></div>
            <div id="bb" style="background-color: #0099FF; Color: white; height: 20px; width: 100%; font-size: 15px; text-align: left; line-height: 20px; padding-top: 5px;">其他信息</div>
            <div style="height: 50px;">
                <table class="tabSearch" cellpadding="0" cellspacing="0" style="">
                    <tr>
                        <td>记录人：@Html.TextBoxFor(model => model.CreateUser, new { @class = "txtCss", @readonly = "readonly" })
                        </td>
                    </tr>
                </table>
            </div>
            <div style="margin-top: 20px; margin-left: 0%;">
                <input class="btn" type="button" id="btnSave" value="保存" />
                <input class="btn" type="button" id="Cancel" value="取消" />
            </div>
             @Html.Hidden("m",@ViewData["m"]);
        </div>
    </form>
</body>
</html>
