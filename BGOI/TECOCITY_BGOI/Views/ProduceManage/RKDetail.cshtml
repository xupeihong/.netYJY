@{
    ViewBag.Title = "UpdateOrdersInfo";
}

@using TECOCITY_BGOI;
@model tk_PStocking
<!DOCTYPE html>
<html>
<head>
    <title>RecordManage</title>
    <link href="@Url.Content("~/CSS/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery_dialog.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Validate/Validate-Injection.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/My97DatePicker/WdatePicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ProduceManage/RKDetail.js")" type="text/javascript"></script>
    <style type="text/css">
        .RowClass
        {
            background-color: #efd2d2;
        }
    </style>
</head>
<body>
    <form id="form1" method="post">
        <div id="tabTitile"><span style="margin-left: 10px; float: left;">入库单编号：@ViewData["RKID"]</span></div>@Html.HiddenFor(model => Model.RKID)
        <div style="height: 420px; overflow-y: auto;">
            <h1 style="text-align: center">入库详情</h1>
            <div id="b" style="height: 5px"></div>
            <div id="bb" style="background-color: #0099FF; Color: white; height: 20px; width: 100%; font-size: 15px; text-align: left; line-height: 20px; padding-top: 5px;">基本信息</div>
            <table class="tabInfo" cellpadding="0" style="width: 98%;text-align:center">
                <tr>
                    <td>任务单号:</td>
                    <td>@ViewData["RWID"] @Html.ValidationMessageFor(model => model.RWID) </td>
                    <td>入库日期:</td>
                    <td>@ViewData["StockInTime"] @Html.ValidationMessageFor(model => model.StockInTime) </td>
                </tr>
                <tr>
                    <td>完成日期:</td>
                    <td>@ViewData["FinishTime"] @Html.ValidationMessageFor(model => model.FinishTime) </td>
                </tr>

            </table>
            <div id="b" style="height: 5px"></div>
            <div id="bb" style="background-color: #0099FF; Color: white; height: 20px; width: 100%; font-size: 15px; text-align: left; line-height: 20px; padding-top: 5px;">产品信息</div>
            <div id="a" style="padding-top: 10px">
                <div style="overflow-y: scroll; max-height: 100px;">
                    <table id="myTable" cellpadding="0" cellspacing="0" class="tabInfo" style="width: 98%;text-align:center">
                        <tr align="center" valign="middle">
                            <th style="width: 5%;" class="th">序号
                            </th>
                            <th style="width: 10%;" class="th">产品编码
                            </th>
                            <th style="width: 10%;" class="th">产品名称
                            </th>
                            <th style="width: 10%;" class="th">规格型号
                            </th>

                            <th style="width: 10%;" class="th">单位
                            </th>
                            <th style="width: 10%;" class="th">交货数量
                            </th>
                            <th style="width: 10%;" class="th">备注
                            </th>
                        </tr>
                        <tbody id="DetailInfo"></tbody>
                    </table>
                </div>
                <div id="b" style="height: 5px"></div>
                <div id="bb" style="background-color: #0099FF; Color: white; height: 20px; width: 100%; font-size: 15px; text-align: left; line-height: 20px; padding-top: 5px;">入库基本信息</div>
                <table class="tabInfo" cellpadding="0" style="width: 98%;text-align:center">
                    <tr>
                        <td>入库库房</td>
                        <td>@Model.HouseID @Html.ValidationMessageFor(model => model.HouseID) </td>
                        <td>入库批次</td>
                        <td>@Model.Batch @Html.ValidationMessageFor(model => model.Batch) </td>
                    </tr>
                    <tr>
                        <td>入库说明</td>
                        <td>@Model.StockRemark @Html.ValidationMessageFor(model => model.StockRemark) </td>
                        <td>入库说明</td>
                        <td>@Model.StockInUser @Html.ValidationMessageFor(model => model.StockInUser) </td>
                    </tr>
                </table>
            </div>

            <input type="button" class="btn" id="btnExit" value="关闭" />
        </div>

    </form>
</body>
</html>


