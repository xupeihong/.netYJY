@{
    ViewBag.Title = "UpdateOrdersInfo";
}

@using TECOCITY_BGOI;
@model tk_ProductTask
<!DOCTYPE html>
<html>
<head>
    <title>RecordManage</title>
    <link href="@Url.Content("~/CSS/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery_dialog.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Validate/Validate-Injection.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/My97DatePicker/WdatePicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ProduceManage/TaskDetail.js")" type="text/javascript"></script>
    <style type="text/css">
        .RowClass
        {
            background-color: #efd2d2;
        }
    </style>
</head>
<body>
    <form id="form1" method="post">
        <div id="tabTitile"><span style="margin-left: 10px; float: left;">任务单编号：@Model.RWID</span></div>@Html.HiddenFor(model => Model.RWID)
        <div style="height: 420px; overflow-y: auto;">
            <h1 style="text-align: center">任务单详情</h1>
            <div>
                <span style="float: left; padding-left: 15%">合同编号:@Model.ID</span>@Html.HiddenFor(model => model.ID) &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                开单日期：@ViewData["ContractDate"]
            </div>
            <div id="b" style="height: 5px"></div>
            <div id="bb" style="background-color: #0099FF; Color: white; height: 20px; width: 100%; font-size: 15px; text-align: left; line-height: 20px; padding-top: 5px;">基本信息</div>
            <table class="tabInfo" cellpadding="0" style="width: 98%; text-align: center">
                <tr>
                    <td>客户代码:</td>
                    <td>@Model.Clientcode @Html.ValidationMessageFor(model => model.Clientcode) </td>
                    <td>订货单位:</td>
                    <td>@Model.OrderUnit @Html.ValidationMessageFor(model => model.OrderUnit) </td>
                </tr>
                <tr>
                    <td>地址:</td>
                    <td>@Model.OrderAddress @Html.ValidationMessageFor(model => model.OrderAddress) </td>
                </tr>
                <tr>
                    <td>联系人:</td>
                    <td>@Model.OrderContactor @Html.ValidationMessageFor(model => model.OrderContactor) </td>
                    <td>电话:</td>
                    <td>@Model.OrderTel @Html.ValidationMessageFor(model => model.OrderTel) </td>
                </tr>

            </table>
            <div id="b" style="height: 5px"></div>
            <div id="bb" style="background-color: #0099FF; Color: white; height: 20px; width: 100%; font-size: 15px; text-align: left; line-height: 20px; padding-top: 5px;">产品信息</div>
            <div id="a" style="padding-top: 10px">
                <div style="overflow-y: scroll; max-height: 90px;">
                    <table id="myTable" cellpadding="0" cellspacing="0" class="tabInfo" style="width: 98%; max-height: 100px; text-align: center">
                        <tr align="center" valign="middle">
                            <th style="width: 5%;" class="th">序号
                            </th>
                            <th style="width: 10%;" class="th">产品编号
                            </th>
                            <th style="width: 10%;" class="th">产品名称
                            </th>
                            <th style="width: 10%;" class="th">规格型号
                            </th>
                            <th style="width: 10%;" class="th">单位
                            </th>
                            <th style="width: 10%;" class="th">数量
                            </th>
                            @* <th style="width: 15%;" class="th">技术要求及参数
                            </th>*@
                            <th style="width: 15%;" class="th">完成日期
                            </th>
                            @*  <th style="width: 10%;" class="th">备注
                            </th>*@
                        </tr>
                        <tbody id="DetailInfo"></tbody>
                    </table>
                </div>
                <div id="b" style="height: 5px"></div>
                <div id="bb" style="background-color: #0099FF; Color: white; height: 20px; width: 100%; font-size: 15px; text-align: left; line-height: 20px; padding-top: 5px;">其他信息</div>
                <table id="Botom" class=" tabInfo" style="text-align: center">
                    <tr>
                        <td>任务说明:</td>
                        <td>@Model.Remark @Html.ValidationMessageFor(model => model.Remark) </td>
                        <td>记录人:</td>
                        <td>@Model.CreateUser @Html.ValidationMessageFor(model => model.CreateUser) </td>
                    </tr>
                    <tr>
                        <td>技术要求及参数:</td>
                        <td>@Model.Technology @Html.ValidationMessageFor(model => model.Remark) </td>
                        <td>备注:</td>
                        <td>@Model.Note @Html.ValidationMessageFor(model => model.ContractDate) </td>
                    </tr>
                </table>
            </div>
            <input type="button" class="btn" id="btnExit" value="关闭" />
        </div>

    </form>
</body>
</html>
