@{
    Layout = null;
}
@using TECOCITY_BGOI;
@model tk_SalesGrid
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetProduct</title>
    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery_dialog.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Sales/RetailSales/GetProduct.js")" type="text/javascript"></script>
    <style>
        .ui-jqgrid tr.jqgrow td
        {
            white-space: normal !important;
            height: auto;
            vertical-align: text-top;
            padding-top: 2px;
        }
    </style>
</head>
<body>
    <form>

        <div style=" padding-top:2px; width:850px;">
            <div id="TopList">
                <table class="tabInfo" cellpadding="0" cellspacing="0" border="0" style="width: 100%; margin-bottom: 5px; margin-left: 5px; margin-right: 5px; margin-top: 5px;">
                    <tr>
                        <td>货品编号</td>
                        <td>@Html.TextBoxFor(model => model.PlanID, new { @class = "txtCss", style = "width:98%" }) @Html.ValidationMessageFor(model => model.ContractID)</td>
                    </tr>
                    <tr>
                        <td>货品名称</td>
                        <td>@Html.TextBoxFor(model => model.PlanName, new { @class = "txtCss", style = "width:98%" }) @Html.ValidationMessageFor(model => model.OrderUnit)</td>

                    </tr>
                    <tr>
                        <td>规则型号</td>
                        <td>@Html.TextBoxFor(model => model.SpecsModels, new { @class = "txtCss", style = "width:98%" }) @Html.ValidationMessageFor(model => model.UseUnit)</td>
                    </tr>
                </table>
                <input type="button" id="SelectProduct" value="查询" class="btn" style="margin-left:5px;" />

            </div>
        </div>
        <div style="width: 850px; height: 300px;">
            <div id="AListInfo1" style="padding-left: 10px; float: left; width: 100px;">
                <table id="RUnitList"></table>
            </div>
            <div id="bor" style="width: 720px; padding-left: 10px; float: left">
                <table id="list" class="scroll" style="width: 100%;"></table>
                <div id="pager" class="scroll" style="text-align: center; width: 100%;"></div>
            </div>
        </div>
        <div style="margin-top: 10px; margin-left: 75%">
            <input class="btn" type="button" id="btnSave" value="确定" />
        </div>
    </form>
</body>
</html>
