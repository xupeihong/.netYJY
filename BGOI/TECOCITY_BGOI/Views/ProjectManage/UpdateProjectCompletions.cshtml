   <style>
       .ui-jqgrid tr.jqgrow td {
        white-space: normal !important;
        height:auto;
        vertical-align:text-top;
        padding-top:2px;
        }
       </style>
</head>
   
<body>
    @using (Html.BeginForm("UpdateProjectCompletions", "ProjectManage", FormMethod.Post, new { id = "ProjectformInfo"}))
    {
        
    <div id="pageContent"  style="overflow-y:auto;">
    <div id="tabTitile"><span style="margin-left:20px;">项目编号：@Model.StrPID</span></div>@Html.HiddenFor(model => model.StrPID)
        <table class="tabInfo" style="width: 97%;margin-left:10px;margin-top:10px;">
              <tr>
            <td class="textLeft"  style="width:20%;">施工验收编号</td><td class="textRight">@Html.TextBoxFor(model => model.Strcid, new {style="width:200px;",@ReadOnly = "ReadOnly",onkeypress="return !(event.keyCode==8)",onkeydown="return !(event.keyCode==8)"})</td>
        </tr>
          <tr>
            <td class="textLeft">项目名称</td><td class="textRight">@Html.TextBox("Pname",@ViewData["Pname"], new {style="width:90%" ,@ReadOnly = "ReadOnly",onkeypress="return !(event.keyCode==8)",onkeydown="return !(event.keyCode==8)"})</td>
        </tr>
        <tr>
            <td class="textLeft" style="width:100px;">竣工日期</td><td class="textRight">@Html.TextBoxFor(model => model.StrCompleteDate, new {@class="txtCss",onclick = "WdatePicker({dateFmt: 'yyyy-MM-dd' })" }) <span style="color:red;"> * </span> @Html.ValidationMessageFor(model => model.StrCompleteDate)</td>
        </tr>
        <tr>
            <td class="textLeft" style="width:100px;">验收人</td><td class="textRight">@Html.TextBoxFor(model => model.StrCompletePerson, new {@class="txtCss" }) <span style="color:red;"> * </span> @Html.ValidationMessageFor(model => model.StrCompletePerson)</td>
        </tr>
        <tr>
            <td class="textLeft" style="width:100px;">验收说明</td><td class="textRight">@Html.TextAreaFor(model => model.StrCompleteRmark, new {@class="txtCss" ,style="height:100px;width:90%"}) <span style="color:red;"> * </span> @Html.ValidationMessageFor(model => model.StrCompletePerson)</td>
        </tr>
        <tr>
            <td class="textLeft">已存在文件</td><td colspan ="3"><div id="unit"></div> </td>
        </tr>
      
    </table>
       <div style="margin-top:5px;margin-left:75%">
             <input class="btn" type="button"  id="charge" value="确定"/>
       </div> 
    <table class="tabInfo" style="width: 97%; margin-left: 8px; margin-top: 5px;overflow-y:auto;">
                 <tr style="height:100px;">
                    <td class="textLeft" style="width:20%;">上传文件</td>
                    <td> <input id="uploadify" type="file" name="uploadfy" style="margin-left: 150px;" />
                         <input class="btn" type="button" id="upload" value="上 传" style="margin-left: 74%;display:none;" />
                    </td>
                </tr>
            </table>
    </div>
    }
</body>
</html>
