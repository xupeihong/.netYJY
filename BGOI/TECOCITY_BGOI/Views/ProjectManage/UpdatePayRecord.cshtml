   <style>
       .ui-jqgrid tr.jqgrow td {
        white-space: normal !important;
        height:auto;
        vertical-align:text-top;
        padding-top:2px;
        }
       </style>
</head>
   
<body>
    @using (Html.BeginForm("UpdatePayRecord", "ProjectManage", FormMethod.Post, new { id = "ProjectformInfo", onsubmit = "return returnConfirm();" }))
    {
        @Html.HiddenFor(model => model.StrPayID)
    <div id="pageContent">
       
    <div id="tabTitile"><span style="margin-left:20px;">项目编号：@Model.StrPID</span></div>@Html.HiddenFor(model => model.StrPID)
        <table class="tabInfo" style="width: 97%;margin-left:10px;margin-top:10px;">
       @* <tr>
            <td class="textLeft" style="width:150px;">费用支出编号</td><td class="textRight">@Html.TextBoxFor(model => model.StrPayID, new {@class="txtCss" ,@ReadOnly = "ReadOnly",onkeypress="return !(event.keyCode==8)",onkeydown="return !(event.keyCode==8)"}) </td>
        </tr>*@
         <tr>
            <td class="textLeft">项目名称</td><td class="textRight">@Html.TextBox("Pname",@ViewData["Pname"], new {style="width:90%" ,@ReadOnly = "ReadOnly",onkeypress="return !(event.keyCode==8)",onkeydown="return !(event.keyCode==8)"})</td>
        </tr>
        <tr>
            <td class="textLeft">费用支出类型</td><td class="textRight">@Html.DropDownListFor(model => model.StrPayType, ProjectMan.GetNewConfigContent("PayType"), new {@class="txtCss" }) <span style="color:red;"> * </span> @Html.ValidationMessageFor(model => model.StrPayType)</td>
       </tr>
          <tr>
            <td class="textLeft">费用支出金额</td><td class="textRight">@Html.TextBoxFor(model => model.StrPayPrice, new {@class="txtCss"}) @Html.ValidationMessageFor(model => model.StrPayPrice)</td>
        </tr>
        <tr>
            <td class="textLeft">费用支出日期</td><td class="textRight">@Html.TextBoxFor(model => model.StrPayDate, new { @class="txtCss",onclick = "WdatePicker({dateFmt: 'yyyy-MM-dd' })"})  @Html.ValidationMessageFor(model => model.StrPayDate)</td>
        </tr>
         <tr>
            <td class="textLeft">费用支出人员</td><td class="textRight">@Html.TextBoxFor(model => model.StrPayPerson, new { @class="txtCss"})  @Html.ValidationMessageFor(model => model.StrPayPerson)</td>
        </tr>
    </table>
       <div style="margin-top:10px;margin-left:75%">
             <input class="btn" type="submit"  id="charge" value="确定"/>
       </div> 
   
    </div>
