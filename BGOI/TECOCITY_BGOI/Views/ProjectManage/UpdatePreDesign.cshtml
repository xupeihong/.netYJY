   <style>
       .ui-jqgrid tr.jqgrow td {
        white-space: normal !important;
        height:auto;
        vertical-align:text-top;
        padding-top:2px;
        }
       </style>
</head>
   
<body>
    @using (Html.BeginForm("UpdatePreDesign", "ProjectManage", FormMethod.Post, new { id = "ProjectformInfo" }))
    {
        @Html.HiddenFor(model => model.Strsid)
    <div id="pageContent" style="overflow-y: auto;">
    <div id="tabTitile"><span style="margin-left:20px;">项目编号：@Model.StrPID</span></div>@Html.HiddenFor(model => model.StrPID)
        <table class="tabInfo" style="width: 97%;margin-left:10px;margin-top:10px;">
         <tr>
            <td class="textLeft"  style="width:20%;">设计编号</td><td class="textRight">@Html.TextBoxFor(model => model.Strsid, new {@ReadOnly = "ReadOnly",onkeypress="return !(event.keyCode==8)",onkeydown="return !(event.keyCode==8)"})</td>
        </tr>
          <tr>
            <td class="textLeft">项目名称</td><td class="textRight">@Html.TextBox("Pname",@ViewData["Pname"], new {style="width:90%" ,@ReadOnly = "ReadOnly",onkeypress="return !(event.keyCode==8)",onkeydown="return !(event.keyCode==8)"})</td>
        </tr>
        <tr>
            <td class="textLeft" style="width:100px;">设计内容</td><td class="textRight">@Html.DropDownListFor(model => model.StrDesignType,ProjectMan.GetNewConfigContent("Design"), new {@class="txtCss" }) <span style="color:red;"> * </span>@Html.ValidationMessageFor(model => model.StrDesignType)</td>
        </tr>
        <tr>
            <td class="textLeft">概述</td><td class="textRight">@Html.TextAreaFor(model => model.StrPview, new { style="width:90%;height:100px;"}) <span style="color:red;"> * </span> @Html.ValidationMessageFor(model => model.StrPview)</td>
        </tr>
        <tr>
            <td class="textLeft">已存在文件</td><td colspan ="3"><div id="unit"></div> </td>
        </tr>
     
    </table>
       <div style="margin-top:5px;margin-left:75%">
             <input class="btn" type="button"  id="charge" value="确定"/>
       </div> 
     <table class="tabInfo" style="width: 97%; margin-left: 8px; margin-top: 5px;overflow-y:auto;">
                 <tr style="height:100px;">
                    <td class="textLeft" style="width:20%;">上传文件</td>
                    <td> <input id="uploadify" type="file" name="uploadfy" style="margin-left: 150px;" />
                         <input class="btn" type="button" id="upload" value="上 传" style="margin-left: 74%;display:none;" />
                    </td>
                </tr>
            </table>
    </div>
    }
</body>
