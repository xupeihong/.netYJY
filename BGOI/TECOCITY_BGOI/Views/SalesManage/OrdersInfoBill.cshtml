@{
    ViewBag.Title = "OrdersInfoBill";
}

@using TECOCITY_BGOI;
@model OrdersInfo
<!DOCTYPE html>
<html>
<head>
    <title>RecordManage</title>
    <link href="@Url.Content("~/CSS/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery_dialog.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/My97DatePicker/WdatePicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Sales/OrdersInfoBill.js")" type="text/javascript"></script>
    <style>
        .RowClass {
            background-color: #efd2d2;
        }
    </style>
</head>
<body>
    <form id="form1" method="post">
        <div id="tabTitile"><span style="margin-left: 10px; float: left;">订单编号：@Model.OrderID</span></div>@Html.HiddenFor(model => Model.OrderID)
        @Html.Hidden("PID", @ViewData["PID"])
        <div id="bor" style="height: 545px; overflow-y: auto;">
            <table class="tabInfo" cellpadding="0" style=" width:750px;">
                <tr>
                    <td>备案编号：@Model.PID </td>
                    <td>合同编号：@Model.ContractID</td>
                </tr>
                <tr>
                    <td>订单单位:</td>
                    <td> @Html.DisplayFor(model => Model.OrderUnit)</td>
                    <td>联系人:</td>
                    <td>@Html.DisplayFor(model => Model.OrderContactor)</td>
                    <td>联系电话:</td>
                    <td> @Html.DisplayFor(model => Model.OrderTel)</td>
                    <td>地址:</td>
                    <td> @Html.DisplayFor(model => Model.OrderAddress) </td>
                </tr>
      
                <tr>
                    <td>使用单位:</td>
                    <td> @Html.DisplayFor(model => Model.UseUnit)</td>
                    <td>联系人:</td>
                    <td> @Html.DisplayFor(model => Model.UseContactor) </td>
                    <td>联系电话:</td>
                    <td> @Html.DisplayFor(model => Model.UseTel)</td>
                    <td> 地址:</td>
                    <td> @Html.DisplayFor(model => Model.UseAddress)</td>
                </tr>
              
                <tr>
                    <td>
                        交货时间:
                    </td>
                    <td colspan="7">
                        @Html.DisplayFor(model => Model.DeliveryTime)
                    </td>
                </tr>
                <tr>
                    <td>合计:人民币</td>
                    <td >@Html.DisplayFor(model => Model.Total)</td>
                    <td>付款方式</td>
                    <td>@Html.DisplayFor(model => Model.PayWay)</td>
                    <td>产品保修期</td>
                    <td colspan="3">@Html.DisplayFor(model => Model.Guarantee)</td>
                </tr>
                <tr>
                    <td rowspan="2">供方</td>
                    <td>单位</td>
                    <td>@Html.DisplayFor(model => Model.Provider)</td>
                    <td rowspan="2"> 需方 </td>
                    <td >单位</td>
                    <td colspan="3">@Html.DisplayFor(model => Model.Demand)</td>
                </tr>
                <tr>
                    <td>负责人：</td>
                    <td> @Html.DisplayFor(model => Model.ProvidManager)</td>
                    <td>负责人：</td>
                    <td colspan=" 3">@Html.DisplayFor(model => Model.DemandManager)</td>
                </tr>
                <tr><td>备注：</td><td colspan="3">@Html.DisplayFor(model => Model.Remark)</td>
                    <td>业务渠道：</td>
                    <td colspan="3">@Html.DisplayFor(model => Model.ChannelsFrom)</td>
                </tr>
            </table>
            <div style="width:750px;">
                <table id="myTable" cellpadding="0" cellspacing="0" class="tabInfo" style=" width :1000px;">
                </table>
                <div id="pager1" class="scroll" style="text-align: center; width: 100%;"></div>
              <input type="button" class="btn" id="btnExit" value="取消" />
                  
            </div>
        </div>

    </form>
</body>
</html>

