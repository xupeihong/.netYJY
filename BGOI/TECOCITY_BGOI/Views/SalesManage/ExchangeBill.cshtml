@{
    ViewBag.Title = "ExchangeBill";
}
@using TECOCITY_BGOI
@model ExchangeGoods
<!DOCTYPE html>
<html>
<head>
    <title>AddOffer</title>
    <link href="@Url.Content("~/CSS/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery_dialog.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/My97DatePicker/WdatePicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Sales/ExchangeBill.js")" type="text/javascript"></script>
    <style>
        .RowClass {
            background-color: #efd2d2;
        }
    </style>
</head>
<body>
    <form id="form1" method="post">
        <div id="tabTitile"><span style="margin-left: 10px; float: left;">退货编号：@Model.EID</span></div>@Html.HiddenFor(model => Model.EID)
        <div style="height: 400px; overflow-y:auto;">
            <div>
                订单单号：@Model.OrderID @Html.HiddenFor(model => Model.OrderID)
            </div>
            <div>
                <table id="Botom" class=" tabInfo" style=" width :750px ;">
                    <tr >
                        <td colspan="6">  退货信息</td>
                    </tr>
                    <tr>
                        <td>退货类型</td>
                        <td>
                            @Html.DisplayFor(model => Model.ReturnType)
                        </td>
                        <td>退货方式</td>
                        <td>@Html.DisplayFor(model => Model.ReturnWay)</td>
                        <td>退货约定</td>
                        <td> @Html.DisplayFor(model => Model.ReturnContract)</td>
                    </tr>
                    <tr>
                        <td>退货原因</td>
                        <td>@Html.DisplayFor(model => Model.ReturnReason)</td>
                        <td>退货说明</td>
                        <td >@Html.DisplayFor(model => Model.ReturnInstructions)</td>
                        <td>申请人</td>
                        <td >@Html.DisplayFor(model=>Model.CreateTime)</td>
                    </tr>
                    <tr>
                        <td colspan="6">换货信息</td>
                    </tr>
                </table>
                <div> 退货货品产品列表</div>
                <table id="myTable" cellpadding="0" cellspacing="0" class="tabInfo" style=" width :750px">
                </table>
                <div id="pager" class="scroll" style="text-align: center; width: 100%;"></div>
             <div>换货信息产品列表</div>
             <table id="ReturnTable" cellpadding="0" cellspacing="0" class="tabInfo" style=" width :750px;">
            </table>
                <div id="pager2" class="scroll" style="text-align: center; width: 100%;"></div>
        </div>
        <input type="button" class="btn" id="btnExit" value="取消" />
    </div>

</form>
</body>
</html>



