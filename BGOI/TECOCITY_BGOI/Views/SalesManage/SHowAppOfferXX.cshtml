@{
    ViewBag.Title = "SHowAppOfferXX";
}
@using TECOCITY_BGOI;
@model Offer
<!DOCTYPE html>
<html>
<head>
    <title>RecordManage</title>
    <link href="@Url.Content("~/CSS/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery_dialog.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/My97DatePicker/WdatePicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Sales/SHowAppOfferXX.js")" type="text/javascript"></script>
    <style>
        .RowClass {
            background-color: #efd2d2;
        }
    </style>
</head>
<body>
    <form id="form1" method="post">
        <div id="tabTitile"><span style="margin-left: 10px; float: left;">报价编号：@Model.BJID</span></div>@Html.HiddenFor(model => Model.BJID)
        <div style="height: 545px; overflow-y:auto;">
            <table class="tabInfo" style="width: 99%; margin-left: 8px; margin-top: 10px;">
                <tr style="text-align:center ;font :bold ;margin-top:20px;font-size:24px;">
                    <td colspan="5"> 修改报价单</td>
                </tr>
                <tr>
                    <td>   备案编号：@Model.PID</td>@Html.HiddenFor(model => Model.PID)
                    <td>   报价标题:@Html.DisplayFor(model => Model.OfferTitle) @Html.ValidationMessageFor(model => model.OfferTitle) </td>
                    <td>   报价日期:@Html.DisplayFor(model => Model.OfferTime)@Html.ValidationMessageFor(model => model.OfferTime)</td>
                </tr>
                <tr>
                    <td colspan="4">   报价物品</td>
                </tr>
                <tr>
                    <td colspan="4">
                        <div style="overflow-y: scroll;">
                            <table id="myTable" cellpadding="0" cellspacing="0" class="tabInfo">
                                <tr align="center" valign="middle">
                                    <th style="width: 5%;" class="th">
                                        序号
                                    </th>
                                    <th style="width: 15%;" class="th">
                                        物品编号
                                    </th>
                                    <th style="width: 15%;" class="th">
                                        物品名称
                                    </th>
                                    <th style="width: 20%;" class="th">
                                        规格型号
                                    </th>
                                    <th style="width: 5%;" class="th">
                                        单位
                                    </th>
                                    <th style="width: 5%;" class="th">
                                        数量
                                    </th>
                                    <th style="width: 10%;" class="th">
                                        供应商
                                    </th>
                                    <th style="width: 10%;" class="th">
                                        单价
                                    </th>
                                    <th style="width: 10%;" class="th">
                                        金额
                                    </th>
                                    <th style="width: 10%;" class="th">
                                        备注
                                    </th>
                                </tr>
                                <tbody id="DetailInfo"></tbody>
                            </table>
                        </div>
                    </td>
                </tr>
                <tr>  <td colspan="4">报价说明</td></tr>
                <tr>  <td>合同条件</td><td colspan="3"> @Html.DisplayFor(model => Model.FKYD, new { style = "width:98%" })@Html.ValidationMessageFor(model => model.FKYD)</td></tr>
                <tr>  <td>报价金额</td><td colspan="3"> @Html.DisplayFor(model => Model.Total, new { style = "width:98%" })@Html.ValidationMessageFor(model => model.Total)</td></tr>
                <tr>  <td>询价说明</td><td colspan="3"> @Html.DisplayFor(model => Model.Description, new { style = "width:98%" })@Html.ValidationMessageFor(model => model.Description)</td></tr>
                <tr>  <td colspan="4">询价人信息</td></tr>
                <tr>  <td>报价人</td><td colspan="3"> @Html.DisplayFor(model => Model.OfferContacts)@Html.ValidationMessageFor(model => model.OfferContacts)</td></tr>
               
            </table>
        </div>
    </form>
</body>
</html>

