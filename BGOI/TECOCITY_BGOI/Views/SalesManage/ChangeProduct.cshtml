@using TECOCITY_BGOI;
@{
    Layout = null;
}
@model tk_SalesGrid

<!DOCTYPE html>

<html>
<head>
    <!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN">
    <title>ChangeBasic</title>
    <link href="@Url.Content("~/CSS/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery_dialog.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/jquery-ui-1.10.2.custom.css")" rel="stylesheet" type="text/css" />
    @*<script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
        <scriptsrc="@Url.Content("~/Scripts/Validate/Validate-Injection.js")" type="text/javascript"></script>*@
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery_dialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/grid.locale-cn.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/My97DatePicker/WdatePicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Sales/ProjectSales/ChangeProduct.js")" type="text/javascript"></script>
    <style>
        .ui-jqgrid tr.jqgrow td {
            white-space: normal !important;
            height: auto;
            vertical-align: text-top;
            padding-top: 2px;
        }

        .RowClass {
            background-color: #efd2d2;
        }
    </style>
</head>

<body>
    <form>
        <div style=" padding-top:2px; width:850px;">
            <div style="width: 98%; margin-bottom: 5px; margin-left: 10px; margin-right: 5px; margin-top: 5px;" id="TopList">
                <table class="tabInfo" cellpadding="0" cellspacing="0" border="0" style="width:98%; margin-bottom: 5px; margin-left: 10px; margin-right: 5px; margin-top: 5px;">
                    <tr>
                        <td>产品编号</td>
                        <td>@Html.TextBoxFor(model => model.PlanID, new { @class = "txtCss", style = "width:60%" }) @Html.ValidationMessageFor(model => model.ContractID)</td>

                        <td>产品名称</td>
                        <td>@Html.TextBoxFor(model => model.PlanName, new { @class = "txtCss", style = "width:60%" }) @Html.ValidationMessageFor(model => model.OrderUnit)</td>


                        <td>规格型号</td>
                        <td>@Html.TextBoxFor(model => model.SpecsModels, new { @class = "txtCss", style = "width:60%" }) @Html.ValidationMessageFor(model => model.UseUnit)</td>
                    </tr>
                </table>
                <input type="button" id="SelectProduct" value="查询" class="btn" style="float: right; margin-right: 10px;" />

            </div>
        </div>
        <div style="width:850px;height:400px;" class="scroll">
            <div style="width:850px;height:330px;" class="scroll">
                <div id="AListInfo1" style=" padding-left:10px; margin-top:30px; float:left; width:100px;">
                    <table id="RUnitList"></table>
                    <div id="Rpager" class="scroll" style="text-align:center;width:100px;"></div>
                </div>
                <div id="bor" style="width: 85%; padding-left: 10px; margin-top: 5px; float: left">
                    <table id="list" class="scroll tabInfo" style="width:100%;" cellpadding="0" cellspacing="0">
                        <tr align="center" valign="middle">
                            <td style="width: 5%;" class="th">
                                序号
                            </td>
                            <td style="width: 15%;" class="th">
                                物品编号
                            </td>
                            <td style="width: 15%;" class="th">
                                物品名称
                            </td>
                            <td style="width: 15%;" class="th">
                                物料编码
                            </td>
                            <td style="width: 20%;" class="th">
                                规格型号
                            </td>
                            <td style="width: 10%;" class="th">
                                单价
                            </td>
                            <td style="width: 10%;" class="th">
                                供应商
                            </td>
                            <td style="width: 10%;" class="th">
                                货品类型
                            </td>
                        </tr>
                        <tbody id="DetailInfo"></tbody>
                    </table>
                    <div id="pager" class="scroll" style="text-align:center;width:100%;"></div>
                </div>
            </div>
            <div style="margin-top:5px;margin-left:60%">
                <input class="btn" type="button" id="btnSave" value="确定" />

                @*<input class="btn" type="button" id="btnSave2" value="关闭" onclick="closeaaa();" />*@
            </div>
        </div>
    </form>
</body>
</html>
